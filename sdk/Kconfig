    default n
    help
        Enable I2S driver or not.
    help_cht
        啟用 I2S 模組。
    help_chs
        启用 I2S 模块。

config I2S_INTERNAL_CODEC
    bool "I2S INTERNAL CODEC"
    depends on I2S_ENABLE
    default y
    help
        USE Internal Audio CODEC(97x faraday).
    help_cht
        使用內部音訊CODEC(97x faraday)。
    help_chs
        使用內部音訊CODEC(97x faraday)。

config GPIO_I2S
    string "I2S Pins"
    depends on (I2S_ENABLE && !I2S_INTERNAL_CODEC)
    default "20, 21, 22, 23, 24"
    help
        I2S GPIO pin(AMCLK,ZCLK,ZWS,ZDO,ZDI).
    help_cht
        I2S 的 GPIO 號碼(AMCLK,ZCLK,ZWS,ZDO,ZDI)。
    help_chs
        I2S 的 GPIO 接口(AMCLK,ZCLK,ZWS,ZDO,ZDI)。

#config I2S_OUTPUT_PIN_ENABLE
#    bool "I2S Output Pin Enable"
#    depends on I2S_ENABLE
#    default y
#    help
#        use GPIO13 if enable IIS ZDO(output) pin.
#    help_cht
#        使用 GPIO13 當做 I2S ZDO 的輸出接口。
#    help_chs
#        使用 GPIO13 当做 I2S ZDO 的输出接口。

#config I2S_SPDIF_ENABLE
#    bool "I2S SPDIF Enable"
#    depends on I2S_ENABLE
#    default y
#    help
#        use GPIO9 if enable SPDIF.
#    help_cht
#        如果啟用 SPDIF 的話，使用 GPIO9 當做 SPDIF 的輸出接口。
#    help_chs
#        如果启用 SPDIF 的话，使用 GPIO9 当做 SPDIF 的输出接口。

config AXISPI_ENABLE
    bool "AXISPI_Enable"
    depends on CHIP_FAMILY_IT9860
    default y
    help
        Enable AXISPI driver or not.
    help_cht
        啟用 AXISPI 模組。
    help_chs
        启用 AXISPI 模块。

choice
    prompt "DAC protocol type"
    depends on (I2S_ENABLE && !I2S_INTERNAL_CODEC)
    default DAC_PORT_I2C0 if DEF_DAC_I2C0
    default DAC_PORT_I2C1 if DEF_DAC_I2C1
    default DAC_PORT_I2C0
    help
        Choice the interface of DAC port
    help_cht
        選用DAC的IIC介面
    help_chs
        选用DAC的IIC接口

config DAC_port_I2C0
    bool "use I2C0 interface"
    depends on (I2S_ENABLE && I2C0_ENABLE)
    help
        DAC use I2C0 interface.
    help_cht
        DAC 使用 I2C0 介面
    help_chs
        DAC 使用 I2C0 接口

config DAC_port_I2C1
    bool "use I2C1 interface"
    depends on (I2S_ENABLE && I2C1_ENABLE)
    help
        DAC use I2C1 interface.
    help_cht
        DAC 使用 I2C1 介面
    help_chs
        DAC 使用 I2C1 接口

endchoice

config SPI_ENABLE
    bool "SPI_Enable"
    default y
    help
        Enable SPI driver or not.
    help_cht
        啟用 SPI 模組。
    help_chs
        启用 SPI 模块。

config SPI0_ENABLE
    bool "SPI0 Enable"
    depends on SPI_ENABLE
    default y
    help
        Enable SPI0 driver or not.
    help_cht
        啟用 SPI0 模組。
    help_chs
        启用 SPI0 模块。

config SPI0_40MHZ_ENABLE
    bool "SPI0 40MHZ Enable"
    depends on SPI0_ENABLE
    default n
    help
        Enable SPI0 CLK 40MHZ or not, if enable, SPI0 clock is 40MHZ, if not enable, SPI0 clock is 20MHZ(It's related to board layout, not all of boards can run spi with 40MHZ).
    help_cht
        啟用 SPI0 CLK 40MHZ, 啟用後SPI0的頻率為40MHZ, 如果沒有啟用, SPI0 頻率為20MHZ(與板子的layout有關, 不是每張板子都可以跑40MHZ)。
    help_chs
        启用 SPI0 CLK 40MHZ, 启用后SPI0的频率为40MHZ, 如果没有启用, SPI0 频率为20MHZ(与板子的layout有关, 不是每张板子都可以跑40MHZ)。

config SPI0_NORCLK_PARA
    string "SPI0 NOR CLK PARA"
    depends on SPI0_40MHZ_ENABLE
    default 0x7D
    help
        SPI0 40MHZ NOR CLK Parameter (Range 0x00~0xFF), This parameter is the output clock delay of SPI module, we don't recommend customers to adjust this parameter.
    help_cht
        設定 40MHZ NOR CLK Parameter (Range 0x00~0xFF),此參數為調整SPI模組送出的clock delay,不建議客戶調整。
    help_chs
        设定 40MHZ NOR CLK Parameter (Range 0x00~0xFF),此参数为调整SPI模块送出的clock delay,不建议客户调整。

config SPI0_NANDCLK_PARA
    string "SPI0 NAND CLK PARA"
    depends on SPI0_40MHZ_ENABLE
    default 0x1C
    help
        SPI0 40MHZ NAND CLK Parameter (Range 0x00~0xFF), This parameter is the output clock delay of SPI module, we don't recommend customers to adjust this parameter.
    help_cht
        設定 SPI0 40MHZ NAND CLK Parameter (Range 0x00~0xFF), 此參數為調整SPI模組送出的clock delay,不建議客戶調整。
    help_chs
        设定 SPI0 40MHZ NAND CLK Parameter (Range 0x00~0xFF), 此参数为调整SPI模块送出的clock delay,不建议客户调整。

config SPI1_ENABLE
    bool "SPI1 Enable"
    depends on SPI_ENABLE
    default n
    help
        Enable SPI1 driver or not.
    help_cht
        啟用 SPI1 模組。
    help_chs
        启用 SPI1 模块。

config RGBTOMIPI_ENABLE
    bool "RGBToMIPI Enable"
    default n
    help
        Enable RGBToMIPI driver or not.
    help_cht
        啟用 RGBToMIPI。
    help_chs
        启用 RGBToMIPI。

config RGBTOMIPI_MODULE
    file "RGBToMIPI Module | ../../sdk/driver/itp/rgbtomipi | *.c"
    depends on RGBTOMIPI_ENABLE
    default "itp_rgbtomipi_tc358778.c"
    help
        RGBToMIPI module. It puts in sdk\driver\itp\rgbtomipi\*.c
    help_cht
        RGBToMIPI 的模組驅動原始碼，放在 'sdk\driver\itp\rgbtomipi\*.c'。
    help_chs
        RGBToMIPI 的模块驱动源码，放在 'sdk\driver\itp\rgbtomipi\*.c'。

config RGBTOMIPI_USE_SPI
    bool "RGBToMIPI use SPI interface"
    depends on (RGBTOMIPI_ENABLE && (SPI0_ENABLE || SPI1_ENABLE) )
    default n
    help
        Enable the SPI interface.
    help_cht
        啟用觸控按鍵使用SPI介面
    help_chs
        选用触控按键使用SPI接口

choice
    prompt "RGBToMIPI SPI port selection"
    depends on RGBTOMIPI_USE_SPI
    default RGBTOMIPI_SPI0 if DEF_RGBTOMIPI_SPI0
    default RGBTOMIPI_SPI1 if DEF_RGBTOMIPI_SPI1
    default RGBTOMIPI_SPI0
    help
        Choice the SPI port
    help_cht
        選用觸控按鍵的介面
    help_chs
        选用触控按键的接口

config RGBTOMIPI_SPI0
    bool "use SPI0"
    depends on (RGBTOMIPI_USE_SPI && SPI0_ENABLE)
    help
        Use SPI0.
    help_cht
        使用 SPI0
    help_chs
        使用 SPI0

config RGBTOMIPI_SPI1
    bool "use SPI1"
    depends on (RGBTOMIPI_USE_SPI && SPI1_ENABLE)
    help
        Use SPI1.
    help_cht
        使用 SPI1
    help_chs
        使用 SPI1

endchoice

config WIEGAND_ENABLE
    bool "Wiegand Enable"
    default n
    help
        Enable Wiegand driver or not.
    help_cht
        啟用 Wiegand 模組。
    help_chs
        启用 Wiegand 模块。

    config WIEGAND0_ENABLE
        bool "Wiegand0"
        depends on WIEGAND_ENABLE
        default "y" if (CHIP_PKG_IT9910)
        help
            Enable Wiegand0 driver or not.
        help_cht
            啟用 Wiegand0 模組。
        help_chs
            启用 Wiegand0 模块。

        choice
            prompt "Bit Count"
            depends on WIEGAND0_ENABLE
            default WIEGAND0_BIT_34 if DEF_WIEGAND0_BIT_34
            help
                Setup Wiegand protocol of Wiegand0
            help_cht
                設定 Wiegand0 所使用之位元數協定
            help_chs
                設定 Wiegand0 所使用之比特数协议

            config WIEGAND0_BIT_26
                bool "26"
                help
                    Use Wiegand 26 protocol for Wiegand0
                help_cht
                    Wiegand0模組使用Wiegand 26 協定。
                help_chs
                    Wiegand0模块使用Wiegand 26 协议。

            config WIEGAND0_BIT_34
                bool "34"
                help
                    Use Wiegand 34 protocol for Wiegand0
                help_cht
                    Wiegand0模組使用Wiegand 34 協定。
                help_chs
                    Wiegand0模块使用Wiegand 34 协议。

            config WIEGAND0_BIT_37
                bool "37"
                help
                    Use Wiegand 37 protocol for Wiegand0
                help_cht
                    Wiegand0模組使用Wiegand 37 協定。
                help_chs
                    Wiegand0模块使用Wiegand 37 协议。

            config WIEGAND0_BIT_CUSTOMIZE
                bool "Customize"
                help
                    Wiegand0 with customized bit count
                help_cht
                    使用指定位元數的 Wiegand 訊號。
                help_chs
                    使用指定比特数的 Wiegand 讯号。

        endchoice

        config WIEGAND0_CUSTOMIZE_MODULE
            file "Customize Module | ../../sdk/driver/itp | *.c"
            depends on (WIEGAND0_ENABLE && WIEGAND0_BIT_CUSTOMIZE)
            default "itp_wiegand.c"
            help
                Path of Wiegand0 customized module driver. It puts in sdk\driver\itp\itp_wiegand_*.c
            help_cht
                Wiegand0 的模組驅動原始碼，放在 'sdk\driver\itp\itp_wiegand_*.c'
            help_chs
                Wiegand0 的模块驱动源码，放在 'sdk\driver\itp\itp_wiegand_*.c'

     config WIEGAND0_GPIO0
        string "WIEGAND0_GPIO0"
        depends on WIEGAND0_ENABLE
        default 23
        help
            Set GPIO pin for Wiegand0 Data0.
        help_cht
            設定 Wiegand0 模組當作 Data0 的 GPIO pin 號碼。
        help_chs
            设定 Wiegand0 模块当作 Data0 的 GPIO pin 号码。

    config WIEGAND0_GPIO1
       string "WIEGAND0_GPIO1"
       depends on WIEGAND0_ENABLE
       default 24
       help
           Set GPIO pin for Wiegand0 Data1.
       help_cht
           設定 Wiegand0 模組當作 Data1 的 GPIO pin 號碼。
       help_chs
           设定 Wiegand0 模块当作 Data1 的 GPIO pin 号码。

    config WIEGAND1_ENABLE
        bool "Wiegand1"
        depends on (HAVE_TWO_WIEGAND && WIEGAND_ENABLE)
        default y
        help
            Enable Wiegand1 driver or not.
        help_cht
            啟用 Wiegand 1 模組。
        help_chs
            启用 Wiegand 1 模块。

        choice
            prompt "Bit Count"
            depends on WIEGAND1_ENABLE
            default WIEGAND1_BIT_34 if DEF_WIEGAND1_BIT_34
            help
                Setup Wiegand protocol of Wiegand1
            help_cht
                設定 Wiegand1 所使用之位元數協定
            help_chs
                設定 Wiegand1 所使用之比特数协议

            config WIEGAND1_BIT_26
                bool "26"
                help
                    Use Wiegand 26 protocol for Wiegand1
                help_cht
                    Wiegand1模組使用Wiegand 26 協定。
                help_chs
                    Wiegand1模块使用Wiegand 26 协议。

            config WIEGAND1_BIT_34
                bool "34"
                help
                    Use Wiegand 34 protocol for Wiegand1
                help_cht
                    Wiegand1模組使用Wiegand 34 協定。
                help_chs
                    Wiegand1模块使用Wiegand 34 协议。

            config WIEGAND1_BIT_37
                bool "37"
                help
                    Use Wiegand 37 protocol for Wiegand1
                help_cht
                    Wiegand1模組使用Wiegand 37 協定。
                help_chs
                    Wiegand1模块使用Wiegand 37 协议。

            config WIEGAND1_BIT_CUSTOMIZE
                bool "Customize"
                help
                    WIEGAND1 with customized bit count
                help_cht
                    使用指定位元數的 Wiegand 訊號。
                help_chs
                    使用指定比特数的 Wiegand 讯号。

        endchoice

        config WIEGAND1_CUSTOMIZE_MODULE
            file "Customize Module | ../../sdk/driver/itp | *.c"
            depends on (WIEGAND1_ENABLE && WIEGAND1_BIT_CUSTOMIZE)
            default "itp_wiegand.c"
            help
                Path of Wiegand1 customized module driver. It puts in sdk\driver\itp\itp_wiegand_*.c
            help_cht
                Wiegand1 的模組驅動原始碼，放在 'sdk\driver\itp\itp_wiegand_*.c'
            help_chs
                Wiegand1 的模块驱动源码，放在 'sdk\driver\itp\itp_wiegand_*.c'

     config WIEGAND1_GPIO0
        string "WIEGAND1_GPIO0"
        depends on WIEGAND1_ENABLE
        default 25
        help
            Set GPIO pin for Wiegand1 Data0.
        help_cht
            設定 Wiegand1 模組當作 Data0 的 GPIO pin 號碼。
        help_chs
            设定 Wiegand1 模块当作 Data0 的 GPIO pin 号码。

    config WIEGAND1_GPIO1
       string "WIEGAND1_GPIO1"
       depends on WIEGAND1_ENABLE
       default 26
       help
           Set GPIO pin for Wiegand1 Data1.
       help_cht
           設定 Wiegand1 模組當作 Data1 的 GPIO pin 號碼。
       help_chs
           设定 Wiegand1 模块当作 Data1 的 GPIO pin 号码。


