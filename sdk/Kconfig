    bool "compress audio plugin"
    depends on AUDIO_ENABLE
    default n
    help
        compress audio plugin

config DIALOGUE_PARAMETER_SET
    bool "Dialogue Parameter Set"
    depends on I2S_ENABLE && AUDIO_ENABLE
    default n
    help
        Enable Dialogue Parameter Set.
    help_cht
        設定通話參數選單。
    help_chs
        設定通話參數選單。

menu "Speech Filter"
    depends on DIALOGUE_PARAMETER_SET

config AUDIO_SAMPLING_RATE
    string "Audio Sampling Rate"
    depends on I2S_ENABLE && AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default "8000"
    help
        Audio Sampling Rate Set.
    help_cht
        聲音取樣頻率(8K或16K)。
    help_chs
        聲音取樣頻率(8K或16K)。

config AEC_ENABLE
    bool "Echo Cancellation Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Enable Echo Cancellation.
    help_cht
        迴音消除。
    help_chs
        迴音消除。

config AEC_WITH_FILTER
    bool "Echo Cancellation With Filter"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && AEC_ENABLE
    default y
    help
        Echo Cancellation with linphone filter Architecture.
    help_cht
        迴音消除，使用linphone filter 架構。
    help_chs
        迴音消除，使用linphone filter 架構。

config AEC_DELAY_MS
    string "Echo Cancellation Delay"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && AEC_ENABLE && AEC_WITH_FILTER
    default "70"
    help
        Set delay in milliseconds.
    help_cht
        設定迴音消除的 delay 參數。（單位： millisecond）
    help_chs
        设定迴音消除的 delay 参数。（单位： millisecond）

config AEC_RUN_IN_ARM
    bool "Set Algorithm method ARM version"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && AEC_ENABLE
    default n
    help
        Set Algorithm ARM version.
    help_cht
        設定演算法ARM版本
    help_chs
        設定演算法ARM版本

config AUDIO_CODEC_SBC
    bool
    prompt "SBC Decode Codec" if DEV_DEVELOP
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && AEC_ENABLE
    default y
    help
        Enable SBC decode
    help_cht
        啟用 SBC decode
    help_chs
        启用 SBC decode

config ENABLE_RECV_FILTER
    bool "Enable receive filter"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default y
    help
        Enable software filter adjust receive data(speaker output data).
    help_cht
        使用 software filter 調整接收聲音(喇叭data)。
    help_chs
        使用 software filter 調整接收聲音(喇叭data)。

config SPEAKER_GAIN
    string "Speaker Gain Set"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && ENABLE_RECV_FILTER
    default "0"
    help
        Set Speaker gain set.
    help_cht
        設定喇叭增益。
    help_chs
        设定喇叭增益。

config AGC_ENABLE_SPK
    bool "AGC Enable SPK"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && ENABLE_RECV_FILTER
    default y
    help
        Set AGC Enable.(auto gain control)
    help_cht
        自動增益控制。(auto gain control)
    help_chs
        自動增益控制。(auto gain control)

config NOISE_GATE_ENABLE_SPK
    bool "Noise Gate Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && ENABLE_RECV_FILTER
    default n
    help
        Enable Noise Gate
    help_cht
        噪音閘開啟
    help_chs
        噪音閘開啟

config NOISE_GATE_THRESHOLD_SPK
    string "Noise Gate Threshold"
    depends on NOISE_GATE_ENABLE_SPK && DIALOGUE_PARAMETER_SET && ENABLE_RECV_FILTER
    default "0.8"
    help
        parameter set range(0<x<1)
    help_cht
        參數值設定範圍(0<x<1)
    help_chs
        參數值設定範圍(0<x<1)

config ENABLE_SEND_FILTER
    bool "Enable send filter"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default y
    help
        Enable software filter adjust send data(mic input data).
    help_cht
        使用 software filter 調整傳送聲音(麥克風data)。
    help_chs
        使用 software filter 調整傳送聲音(麥克風data)。

config MIC_GAIN
    string "Mic Gain Set"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && ENABLE_SEND_FILTER
    default "1"
    help
        Set mic gain set.
    help_cht
        設定麥克風增益。
    help_chs
        设定麥克風增益。

config AGC_ENABLE
    bool "AGC Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && ENABLE_SEND_FILTER
    default y
    help
        Set AGC Enable(auto gain control)
    help_cht
        自動增益控制。(auto gain control)
    help_chs
        自動增益控制。(auto gain control)

config NOISE_GATE_ENABLE
    bool "Noise Gate Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET && ENABLE_SEND_FILTER
    default n
    help
        Enable Noise Gate
    help_cht
        噪音閘開啟
    help_chs
        噪音閘開啟

config NOISE_GATE_THRESHOLD
    string "Noise Gate Threshold"
    depends on NOISE_GATE_ENABLE && DIALOGUE_PARAMETER_SET && ENABLE_SEND_FILTER
    default "0.3"
    help
        Set noise gate threshold(adjust mic sensitive).
        parameter set range(0<x<1)
    help_cht
        設定噪音閾值(調整mic收音感度)。
        參數值設定範圍(0<x<1)
    help_chs
        设定噪音閾值(調整mic收音感度)。
        參數值設定範圍(0<x<1)

config SPK_EQUALIZER_ENABLE
    bool "Speaker Equalizer Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Enable Speaker Equalizer
    help_cht
        Speaker 等化器
    help_chs
        Speaker 等化器

config EQUALIZER_SPKGAIN_SET
    string "Equalizer Speaker Gain Set"
    depends on SPK_EQUALIZER_ENABLE && DIALOGUE_PARAMETER_SET
    default "NULL"
    help
        Set Equalizer Speaker gain set.(frequency:gain:bandwith)
    help_cht
        設定Speaker等化器增益。(頻率:增益:頻帶)
    help_chs
        设定Speaker等化器增益。(頻率:增益:頻帶)

config MIC_EQUALIZER_ENABLE
    bool "MIC Equalizer Enable"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    depends on !CHIP_PKG_IT9910
    default n
    help
        Enable MIC Equalizer
    help_cht
        MIC 等化器
    help_chs
        MIC 等化器

config EQUALIZER_MICGAIN_SET
    string "Equalizer MIC Gain Set"
    depends on MIC_EQUALIZER_ENABLE && DIALOGUE_PARAMETER_SET
    default "\"NULL\""
    help
        Set Equalizer MIC gain set.(frequency:gain:bandwith)
    help_cht
        設定MIC等化器增益。(頻率:增益:頻帶)
    help_chs
        设定MIC等化器增益。(頻率:增益:頻帶)

config AUDIO_ENGINEER_MODEL
    bool "Audio Engineer Model"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Audio Engineer Model.
    help_cht
        聲音工程模式。(由USB讀取linphonerc : 調整通話參數)
    help_chs
        聲音工程模式。(由USB讀取linphonerc : 調整通話參數)

