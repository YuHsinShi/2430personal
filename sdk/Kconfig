    bool "Temporary data in SD1"
    help
        Temporary data in SD1
    help_cht
        暫存分割區放在 SD1。
    help_chs
        暂存分割区放在 SD1。

endchoice

config UPGRADE_ENC_KEY
    string "Encrypt key"
    default "0"
    help
        Encrypt key, 0 for not encrypt.
    help_cht
        資料加密鍵值，0 表示不加密。
    help_chs
        数据加密键值，0 表示不加密。

config UPGRADE_PRESSKEY
    bool "Enter Upgrade mode by press key"
    depends on (UPGRADE_BOOTLOADER || UPGRADE_IMAGE || UPGRADE_DATA)
    default n
    help
        Enter upgrade mode by press key.
    help_cht
        開啟按鍵進入更新模式功能。
    help_chs
        开启按键进入更新模式功能。

config UPGRADE_PRESSKEY_NUM
    string "Press key number"
    depends on UPGRADE_PRESSKEY
    default "1"
    help
        Upgrade key number
    help_cht
        按鍵鍵值。
    help_chs
        按键键值。

config UPGRADE_PRESSKEY_DELAY
    string "The press key delay time (ms) to enter upgrade mode"
    depends on UPGRADE_PRESSKEY
    default "1000"
    help
        The press key delay time (ms) to enter upgrade mode.
    help_cht
        按鍵不放進入更新模式的時間 (單位: ms)。
    help_chs
        按键不放进入更新模式的时间 (单位: ms)。

config UPGRADE_OPEN_FILE
    bool "Enter Upgrade mode by trying to open package file"
    depends on (!UPGRADE_PRESSKEY && (UPGRADE_BOOTLOADER || UPGRADE_IMAGE || UPGRADE_DATA))
    default n
    help
        Enter Upgrade mode by trying to open package file.
    help_cht
        自動搜尋更新檔進入更新模式。
    help_chs
        自动搜寻更新文件进入更新模式。

config UPGRADE_FILENAME
    string "Upgrade package filename"
    default "ITEPKG03.PKG"
    help
        filename of upgrade package
    help_cht
        更新檔檔案名稱。
    help_chs
        更新档文件名。

config UPGRADE_FILENAME_LIST
    string "Filename list of upgrade packages"
    default "ITEPKG03.PKG"
    help
        Filename list of upgrade packages
    help_cht
        更新檔檔案名稱清單。
    help_chs
        更新档文件名清单。

config UPGRADE_PARTITION
    bool "Force partition"
    depends on (UPGRADE_DATA)
    default n
    help
        Force partition or not.
    help_cht
        強制重新分割全部磁碟分割區。
    help_chs
        强制重新分割全部磁盘分区。

config UPGRADE_FORMAT_PARTITION
    bool "Format partition"
    depends on (UPGRADE_DATA && !UPGRADE_PARTITION)
    default n
    help
        Format partition before writing data.
    help_cht
        寫入資料前先格式化磁碟分割區。
    help_chs
        写入资料前先格式化磁碟分割区。

config UPGRADE_DELETE_PKGFILE_AFTER_FINISH
    bool "Delete package file after upgrade finish or error"
    depends on (UPGRADE_BOOTLOADER || UPGRADE_IMAGE || UPGRADE_DATA)
    default n
    help
        Delete package file after upgrade finish or error.
    help_cht
        更新後自動删除更新檔。
    help_chs
        更新后自动删除更新档。

config UPGRADE_DELAY_AFTER_FINISH
    string "Delay time after upgrade finish or error"
    depends on (UPGRADE_BOOTLOADER || UPGRADE_IMAGE || UPGRADE_DATA)
    default 10 if DEV_RELEASE
    default 0 if DEV_DEVELOP
    help
        Delay time to reboot after upgrade finish or error, in sec.
    help_cht
        更新後延遲開機時間。(單位: 秒)
    help_chs
        更新后延迟开机时间。(单位: 秒)

config UPGRADE_USB_DETECT_TIMEOUT
    string "USB device detection timeout"
    depends on (MSC_ENABLE || USBH_CD_MST || UPGRADE_FILENAME)
    default "200"
    help
        Detect USB device timeout, in ms.
    help_cht
        偵測USB裝置的最長時間。(單位: ms)
    help_chs
        侦测USB装置的最长时间。(单位: ms)

config UPGRADE_USB_TIMEOUT
    string "USB drive ready timeout"
    depends on (MSC_ENABLE || USBH_CD_MST || UPGRADE_FILENAME)
    default "8000"
    help
        Wait USB drive to ready timeout, in ms.
    help_cht
        等待USB裝置的最長時間。(單位: ms)
    help_chs
        等待USB装置的最长时间。(单位: ms)

config UPGRADE_USB_DEVICE
    bool "Upgrade by USB device mode"
    depends on USBD_ACM && OPENRTOS_CLI && (UPGRADE_BOOTLOADER || UPGRADE_IMAGE || UPGRADE_DATA)
    default n
    help
        Upgrade by USB device mode.
    help_cht
        由USB裝置模式更新。
    help_chs
        由USB装置模式更新。

config UPGRADE_RECOVERY
    bool "Enable upgrade recovery mode"
    depends on (NET_ENABLE && (NET_FTP || NET_TFTP) && KEYPAD_ENABLE)
    default n
    help
        Enable upgrade recovery mode.
    help_cht
        開啟回復模式功能。
    help_chs
        开启回复模式功能。

config UPGRADE_RECOVERY_TFTP
    bool "Upgrade recovery mode using TFTP protocol"
    depends on (UPGRADE_RECOVERY && NET_TFTP)
    default n
    help
        Upgrade recovery mode using TFTP protocol.
    help_cht
        回復模式使用TFTP協定。
    help_chs
        回复模式使用TFTP协定。

config UPGRADE_RECOVERY_PRESSKEY_NUM
    string "The press key number to enter recovery mode"
    depends on UPGRADE_RECOVERY
    default "1"
    help
        The press key number to enter recovery mode.
    help_cht
        按鍵鍵值進入回復模式。
    help_chs
        按键键值进入回复模式。

config UPGRADE_RECOVERY_PRESSKEY_DELAY
    string "The press key delay time (ms) to enter recovery mode"
    depends on UPGRADE_RECOVERY
    default "10000"
    help
        The press key delay time (ms) to enter recovery mode. Must lager then reset factory mode key if the key is the same.
    help_cht
        按鍵不放進入回復模式的時間(單位: ms)。若鍵值與進入重置模式相同，則此時間值必須大於進入重置模式的時間。
    help_chs
        按键不放进入回复模式的时间(单位: ms)。若键值与进入重置模式相同，则此时间值必须大于进入重置模式的时间。

config UPGRADE_RECOVERY_SERVER_ADDR
    string "Recovery FTP server address"
    depends on UPGRADE_RECOVERY
    default "192.168.1.2"
    help
        Recovery FTP server address
    help_cht
        回復模式中 FTP Server 的 IP address。
    help_chs
        回复模式中 FTP Server 的 IP address。

config UPGRADE_RECOVERY_SSID
    string "Recovery AP SSID"
    depends on (UPGRADE_RECOVERY && NET_WIFI)
    default "DEFAULT"
    help
        Recovery AP SSID. Maximum is 31 characters. The AP must in non-security mode.
    help_cht
        回復模式中 WiFi AP 的 SSID 。最大長度為 31 個字元。AP 必須在未加密模式。
    help_chs
        回复模式中 WiFi AP 的 SSID 。最大长度为 31 个字符。AP 必须在未加密模式。

config UPGRADE_RECOVERY_LED
    bool "Enable Recovery LED or not"
    depends on (UPGRADE_RECOVERY && LED_ENABLE)
    default n
    help
        Enable Recovery LED or not
    help_cht
        開啟回復模式中的LED功能。
    help_chs
        开启回复模式中的LED功能。

config UPGRADE_RECOVERY_LED_NUM
    string "Recovery LED number"
    depends on UPGRADE_RECOVERY_LED
    default "0"
    help
        Recovery LED number
    help_cht
        LED 燈號。
    help_chs
        LED 灯号。

config UPGRADE_RESET_FACTORY
    bool "Enable upgrade reset factory mode"
    depends on KEYPAD_ENABLE
    default n
    help
        Enable upgrade reset factory mode.
    help_cht
        開啟重置模式功能。
    help_chs
        开启重置模式功能。

config UPGRADE_RESET_FACTORY_PRESSKEY_NUM
    string "The press key number to enter reset factory mode"
    depends on UPGRADE_RESET_FACTORY
    default "1"
    help
        The press key number to enter reset factory mode. Must lager then upgrade mode key if the key is the same.
    help_cht
        按鍵鍵值進入重置模式。
    help_chs
        按键键值进入重置模式。

config UPGRADE_RESET_FACTORY_PRESSKEY_DELAY
    string "The press key delay time (ms) to enter reset factory mode"
    depends on UPGRADE_RESET_FACTORY
    default "2000"
    help
        The press key delay time (ms) to enter reset factory mode.
    help_cht
        按鍵不放進入重置模式的時間(單位: ms)。
    help_chs
        按键不放进入重置模式的时间(单位: ms)。

config UPGRADE_NOR_IMAGE
    bool "Generate NOR image"
    depends on (NOR_ENABLE && (UPGRADE_BOOTLOADER || UPGRADE_IMAGE || UPGRADE_DATA))
    default n
    help
        Generate NOR image or not. It cannot used with generating parts of package file.
    help_cht
        產生 NOR 的燒錄檔。此功能無法與產生部份 package 更新的功能並用。
    help_chs
        产生 NOR 的刻录档。此功能无法与产生部份 package 更新的功能并用。

config UPGRADE_NOR_IMAGE_SIZE
    string "NOR image size"
    depends on UPGRADE_NOR_IMAGE
    default "0x400000"
    help
        It must smaller or equal the physical NOR size.

        NOR image size:
        512k: 0x80000
        1M: 0x100000
        2M: 0x200000
        4M: 0x400000
        8M: 0x800000
    help_cht
        NOR 燒錄檔的檔案大小，必須小於或等於實際 NOR 的大小。常用的大小值:

        512k: 0x80000
        1M: 0x100000
        2M: 0x200000
        4M: 0x400000
        8M: 0x800000
    help_chs
        NOR 刻录档的档案大小，必须小于或等于实际 NOR 的大小。常用的大小值:

        512k: 0x80000
        1M: 0x100000
        2M: 0x200000
        4M: 0x400000
        8M: 0x800000

config UPGRADE_NOR_IMAGE_FILENAME
    string "Upgrade NOR image filename"
    depends on UPGRADE_NOR_IMAGE
    default "ITE_NOR.ROM"
    help
        The file name of generated NOR image.
    help_cht
        NOR 燒錄檔的檔案名稱。
    help_chs
        NOR 刻录档的文件名。

config UPGRADE_NAND_DATA_BY_DISK_IMAGE
    bool "Generate NAND disk image"
    depends on (SPI_NAND_BOOT && UPGRADE_DATA)
    default n
    help
        Generate NAND disk image or not.
    help_cht
        將整個 NAND 磁碟整合成一個影像檔。
    help_chs
        将整个 NAND 磁盘整合成一个映像文件。

config UPGRADE_NAND_DISK_IMAGE_SIZE
    string "NAND disk image size"
    depends on UPGRADE_NAND_DATA_BY_DISK_IMAGE
    default "0x8000000"
    help
        It must smaller or equal the physical NAND size.

        NAND image size:
        128MB: 0x8000000
        256MB: 0x10000000
        512MB: 0x20000000
    help_cht
        NAND 燒錄檔的檔案大小，必須小於或等於實際 NAND 的大小。常用的大小值:

        128MB: 0x8000000
        256MB: 0x10000000
        512MB: 0x20000000
    help_chs
        NAND 刻录档的档案大小，必须小于或等于实际 NAND 的大小。常用的大小值:

        128MB: 0x8000000
        256MB: 0x10000000
        512MB: 0x20000000

config UPGRADE_NAND_DISK_IMAGE_FILENAME
    string "The file name of generated NAND disk image"
    depends on UPGRADE_NAND_DATA_BY_DISK_IMAGE
    default "ITE_NAND.IMG"
    help
        The file name of generated NAND disk image.
    help_cht
        NAND 燒錄檔的檔案名稱。
    help_chs
        NAND 刻录档的文件名。

config UPGRADE_FILE_FOR_NAND_PROGRAMMER
    bool "Generate a ROM file for NAND programmer"
    depends on UPGRADE_NAND_DATA_BY_DISK_IMAGE
    default y
    help
        Generate a ROM file for NAND programmer.
    help_cht
        產生一個給NAND燒錄器使用的燒錄檔。
    help_chs
        NAND 刻录档的文件名。

config UPGRADE_NAND_PROGRAMMER_FILENAME
    string "The file name for NAND programmer"
    depends on UPGRADE_FILE_FOR_NAND_PROGRAMMER
    default "ITE_NAND.ROM"
    help
        The file name for NAND programmer.
    help_cht
        NAND 燒錄檔的檔案名稱。
    help_chs
        NAND 刻录档的文件名。

config UPGRADE_NAND_DISK_SECTOR_SIZE
    string
    depends on UPGRADE_NAND_DATA_BY_DISK_IMAGE
    default "512"

config UPGRADE_PACKAGE_VERSION
    string "Upgrade package version"
    depends on (UPGRADE_BOOTLOADER || UPGRADE_IMAGE || UPGRADE_DATA)
    default "1.0"
    help
        Upgrade package version. Maximum 16 characters.
    help_cht
        更新檔版號，最多 16 個字元。
    help_chs
        更新档版号，最多 16 个字元。

config UPGRADE_BACKUP_PACKAGE
    bool "Backup package for restore"
    default n
    help
        Backup package file for restore or not.
    help_cht
        備份更新檔案供回復使用。
    help_chs
        备份更新档案供回复使用。

config UPGRADE_BACKUP_PACKAGE_POS
    string "Backup package position"
    depends on UPGRADE_BACKUP_PACKAGE
    default "0x300000"
    help
        Backup package file position.
    help_cht
        備份更新檔案位置。
    help_chs
        备份更新档案位置。

config UPGRADE_BACKUP_PACKAGE_EXT_FILE
    bool "Assign a existing file as backup package"
    depends on UPGRADE_BACKUP_PACKAGE
    default n
    help
        Assign a existing file as backup package.
        User can build a required PKG file in advance(ex: No Video, No boot image...).
        And then assign it as the backup package(Path is the same as ITEPKG03.PKG)
    help_cht
        設定PKG備份檔的來源是由已有的檔案所提供
        使用者可依照需求，事先建置一份所需PKG(例如:不含影片檔、不含boot image等)        
        然後將此PKG檔指定為備份用的PKG檔(路徑與ITEPKG03.PKG相同)
    help_chs
        设定PKG备份档的来源是由現存文件所提供。
        使用者可依照需求，事先建置一份所需PKG(例如:不含影片文件、不含boot image等)        
        然后将此PKG指定为备份用的PKG文件(路径与ITEPKG03.PKG相同)
            
config UPGRADE_BACKUP_PKG_EXT_FILENAME
    string "Backup package filename"
    depends on UPGRADE_BACKUP_PACKAGE_EXT_FILE
    default "ITEPKG03_BAK.PKG"
    help
        Backup package filename.
    help_cht
        指定備份檔的檔名。
    help_chs
        指定备份文件名称。
            
config UPGRADE_MARK_POS
    string "Upgrade mark position"
    default "0"
    help
        Upgrading mark position. It's used to identify the last upgrading is failed or not. 0 indicates not enabled.
    help_cht
        更新標記位置。用來識別上次更新是否失敗。0 表示不啟用。
    help_chs
        更新标记位置。用来识别上次更新是否失败。0 表示不启用。


config UPGRADE_BOOTING_FROM_PRIVATE
    bool "Copy kproc.sys to private partition"
    depends on (!UPGRADE_BOOTLOADER && !UPGRADE_IMAGE && UPGRADE_DATA && (SD0_STATIC || SD1_STATIC))
    default n
    help
        Copy kproc.sys to private partition. For SD booting use only.
    help_cht
        複製主程式到私有磁碟機。僅供 SD 開機使用。
    help_chs
        复制主程式到私有磁碟机。仅供 SD 开机使用。

config UPGRADE_FROM_UART
    bool "Upgrade PKG file from Uart"
    depends on ((UART0_ENABLE || UART1_ENABLE) && (UART0_DMA || UART1_DMA))
    default n
    help
        Upgrade PKG file from uart
    help_cht
        透過Uart來更新PKG
    help_chs
        透过Uart来更新PKG

config UPGRADE_FROM_UART_BOOT_TIME
    bool "Upgrade PKG file from Uart in boot time"
    depends on UPGRADE_FROM_UART
    default n
    help
        Upgrade PKG file from uart in boot time
    help_cht
        在開機期間透過Uart來更新PKG
    help_chs
        在开机期间透过Uart来更新PKG

config UPGRADE_FROM_UART_RUN_TIME
    bool "Upgrade PKG file from Uart in run time"
    depends on UPGRADE_FROM_UART
    default n
    help
        Upgrade PKG file from uart in run time
    help_cht
        在執行期間透過Uart來更新PKG
    help_chs
        在执行期间透过Uart来更新PKG

choice
    prompt "Upgrade Uart device"
    depends on UPGRADE_FROM_UART
    default UPGRADE_UART0 if DEF_UPGRADE_UART0
    default UPGRADE_UART1 if DEF_UPGRADE_UART1
    default UPGRADE_UART0
    help
        Upgrade Uart device
    help_cht
        選擇更新PKG的UART
    help_chs
        选择更新PKG的UART

config UPGRADE_UART0
    depends on UART0_ENABLE
    bool "UART0"
    help
        Use UART0 to upgrade PKG file
    help_cht
        使用UART0來更新
    help_chs
        使用UART0来更新

config UPGRADE_UART1
    depends on UART1_ENABLE
    bool "UART1"
    help
        Use UART1 to upgrade PKG file
    help_cht
        使用UART1來更新
    help_chs
        使用UART1来更新

endchoice

endmenu


menu "SDK"

choice
    prompt "Build Type"
    default BUILD_DEBUG if DEF_BUILD_DEBUG
    default BUILD_DEBUGREL if DEF_BUILD_DEBUGREL
    default BUILD_RELEASE if DEF_BUILD_RELEASE
    default BUILD_MINSIZEREL if DEF_BUILD_MINSIZEREL
    default BUILD_RELEASE
    help
        Build type
    help_cht
        建置模式
    help_chs
        建置模式

config BUILD_DEBUG
    bool "Debug"
    help
        Debug Build.
    help_cht
        除錯版本。
    help_chs
        除错版本。

config BUILD_DEBUGREL
    bool "DebugRel"
    help
        Release Build with Debug Infomation.
    help_cht
        發佈版本加上除錯資訊。
    help_chs
        发布版本加上除错信息。

config BUILD_RELEASE
    bool "Release"
    help
        Release Build.
    help_cht
        發佈版本。
    help_chs
        发布版本。

config BUILD_MINSIZEREL
    bool "MinSizeRel"
    help
        Minimal Size Release Build.
    help_cht
        空間最小的發佈版本。
    help_chs
        空间最小的发布版本。

endchoice

config VERSION_MAJOR
    string "Version Major"
    default "2"
    help
        Major number (#1) of version information.
    help_cht
        主要版號。
    help_chs
        主要版号。

config VERSION_MINOR
    string "Version Minor"
    default "4"
    help
        Minor number (#2) of version information.
    help_cht
        次要版號。
    help_chs
        次要版号。

config VERSION_PATCH
    string "Version Patch"
    default "3"
    help
        Patch number (#3) of version information.
    help_cht
        修正版號。
    help_chs
        修正版号。

config VERSION_CUSTOM
    string "Version Custom"
    default "0"
    help
        Custom number (#4) of version information.
    help_cht
        自訂版號。
    help_chs
        自订版号。

config SYSTEM_NAME
    string "System Name"
    default "ITE Castor3"
    help
        Systme name.
    help_cht
        系統名稱。
    help_chs
        系统名称。

config MANUFACTURER
    string "Manufacturer"
    default "www.ite.com.tw"
    help
        Manufacturer name
    help_cht
        製造商名稱。
    help_chs
        製造商名称。

config GENERATE_DOC
    bool "Generate documents"
    default n
    help
        Generate documents or not.
    help_cht
        產生 HTML 說明文件。
    help_chs
        产生 HTML 说明文件。

config GENERATE_PACK_ENV
    bool "Generate building package environment"
    depends on (UPGRADE_BOOTLOADER && UPGRADE_IMAGE && UPGRADE_DATA && UPGRADE_NOR_IMAGE)
    default n
    help
        Generate building package environment or not. RD internal use only.
    help_cht
        產生製造更新檔的批次檔案。
    help_chs
       产生制造更新文件的批处理文件。

config GENERATE_VERSION_TWEAK
    bool "Generate Version Tweak"
    default n
    help
        Generate tweak part of version or not. RD internal use only.
    help_cht
        產生編譯版號。
    help_chs
        产生编译版号。

endmenu

menu "Drivers"
    hidden if DEV_DEVELOP

source "$CMAKE_SOURCE_DIR/sdk/driver/Kconfig"

endmenu

menu "Libraries"
    hidden if DEV_DEVELOP

source "$CMAKE_SOURCE_DIR/sdk/share/Kconfig"
source "$CMAKE_SOURCE_DIR/sdk/itu/share/Kconfig"

endmenu
