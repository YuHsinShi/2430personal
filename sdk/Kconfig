    bool "Public data in SD1"
    help
        Public data in SD1
    help_cht
        公用分割區放在 SD1。
    help_chs
        公用分割区放在 SD1。

endchoice

config UPGRADE_TEMP
    bool "Upgrade Temporary Data"
    depends on UPGRADE_DATA
    default n
    help
        Upgrade temporary data or not
    help_cht
        開啟更新暫存分割區資料功能。
    help_chs
        开启更新暂存分割区数据功能。

choice
    prompt "Temporary data location"
    depends on UPGRADE_TEMP
    default UPGRADE_TEMP_NAND if DEF_UPGRADE_TEMP_NAND
    default UPGRADE_TEMP_NOR if DEF_UPGRADE_TEMP_NOR
    default UPGRADE_TEMP_SD0 if DEF_UPGRADE_TEMP_SD0
    default UPGRADE_TEMP_SD1 if DEF_UPGRADE_TEMP_SD1
    default UPGRADE_TEMP_NOR
    help
        Temporary data location.
    help_cht
        暫存分割區的位置。
    help_chs
        暂存分割区的位置。

