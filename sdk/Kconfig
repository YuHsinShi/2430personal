    string "External Watch Dog GPIO Pin"
    depends on EXT_WATCHDOG_ENABLE
    default "74"
    help
        The GPIO pin number for External Watch Dog.
    help_cht
        外部 Watch Dog 的 GPIO 號碼。
    help_chs
        外部 Watch Dog 的 GPIO 接口。

config GPIO_BACKLIGHT_PWM
    string "Backlight PWM Pin"
    depends on BACKLIGHT_ENABLE
    default "95"
    help
        The GPIO pin number for Backlight PWM.
        976:95(correspond to LVDSP4)
        972:85
    help_cht
        LCD 背光 PWM 的 GPIO 號碼。
        976:95(對應到LVDSP4)
        972:85
    help_chs
        LCD 背光 PWM 的 GPIO 接口。
        976:95(对应到LVDSP4)
        972:85

config GPIO_PWM_NUMBER
    string "Backlight PWM NUMBER"
    depends on BACKLIGHT_ENABLE
    default "1"
    help
        The Backlight PWM number.
        976:PWM1
        972:PWM4
    help_cht
        LCD 背光 PWM 的號碼。
        976:PWM1
        972:PWM4
    help_chs
        LCD 背光 PWM 的 GPIO 接口。
        976:PWM1
        972:PWM4

config GPIO_PWM_MODE
    string "Backlight PWM MODE"
    depends on (BACKLIGHT_ENABLE && !CHIP_FAMILY_IT9860)
    default "1"
    help
        The Backlight PWM MODE.
        976:MODE 1
        972:MODE 3
    help_cht
        LCD 背光 PWM 的MODE。
        976:MODE 1
        972:MODE 3
    help_chs
        LCD 背光 PWM 的的MODE。
        976:MODE 1
        972:MODE 3

config GPIO_LCD_PWR_EN
    string "LCD Power Enable Pin"
    depends on BACKLIGHT_ENABLE
    default "48"
    help
        The GPIO pin number for LCD Power Enable.
        9860:48
    help_cht
        開關 LCD Power Enable 的 GPIO 號碼。
        9860:48
    help_chs
        开关 LCD Power Enable 的 GPIO 接口。
        9860:48

config GPIO_LCD_PWR_EN_ACTIVE_LOW
    bool "LCD Power Enable Pin Active Low"
    depends on BACKLIGHT_ENABLE
    default n
    help
        LCD power enable pin is active low.
    help_cht
        LCD Power Enable 開啟時為低電平。
    help_chs
        LCD Power Enable 开启时为低电平。

