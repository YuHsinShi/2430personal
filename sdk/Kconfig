config BUILD_ASR
    bool "Audio ASR "
    depends on I2S_ENABLE && AUDIO_ENABLE
    default n
    help
        Enable Automatic Speech Recognition.
    help_cht
        開啟自動語音辨識功能。
    help_chs
        開啟自動語音辨識功能。

config ASR_LIB_MODULE
    file "Audio ASR LIB module | ../../sdk/share/asr | *.a"
    depends on BUILD_ASR
    default "libasr.a"
    help
        The lib for audio ASR. It puts in 'sdk\share\asr\libasr*.a'.
        RD internal use only.
    help_cht
        Audio ASR 函式庫，放在 'sdk\share\asr\libasr*.a'。
    help_chs
        Audio ASR 函式庫，放在 'sdk\share\asr\libasr*.a'。

menu "ASR Filter"
    depends on ASR_PARAMETER_SET

endmenu #ASR Filter


endmenu #end Audio

menu "Video"
    hidden if DEV_DEVELOP
    depends on HAVE_VIDEO

config VIDEO_ENABLE
    bool "Video Enable"
    default n
    help
        Enable video.
    help_cht
        啟用 video
    help_chs
        启用 video

config MPEGENCODER_ENABLE
	bool "Mpeg Encoder Enable"
    default n
    help
        Enable Mpeg Encoder.
    help_cht
        啟用 Mpeg Encoder
    help_chs
        启用 Mpeg Encoder

config MULTICAST_ENABLE
    bool "Multicast Enable"
    depends on VIDEO_ENABLE
    depends on NET_ENABLE
    default n
    help
        Multicast streaming Enable.
    help_cht
        啟用 Multicast streaming
    help_chs
        启用 Multicast streaming

config VIDEO_FRAME_FUN_ENABLE
    bool "Video Frame Function Enable"
    depends on VIDEO_ENABLE
    default n
    help
        Video Frame Function Enable.
    help_cht
        啟用 Video Frame Function
    help_chs
        启用 Video Frame Function

config RTSP_CLIENT_ENABLE
    depends on VIDEO_ENABLE
    depends on NET_ENABLE
    bool "RTSP client"
    default n

config UVC_ENABLE
    bool "USB Video Class"
    default n
    depends on (USB0_ENABLE || USB1_ENABLE)
    help
        USB Video Class Driver
    help_cht
        啟用 USB 影像裝置模式。
    help_chs
        启用 USB 影像装置模式。

config MJPEG_DEC_ENABLE
		bool "Motion Jpeg Decode Enable"
		depends on VIDEO_ENABLE
    default n
    help
        Motion Jpeg Decode Enable
    help_cht
        啟用 Motion Jpeg Decode。
    help_chs
        启用 Motion Jpeg Decode。
endmenu


menu "Storage"

config NAND_ENABLE
    bool "NAND Device"
    depends on (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856 || CHIP_FAMILY_IT9860)
    default n
    help
        The system will manage NAND partition as internal storage and implement all related functions if enable NAND Device.
    help_cht
        使系統能夠管理 NAND 磁碟分割區及開啟與 NAND flash 所有相關的存儲功能。
    help_chs
        使系统能够管理 NAND 磁盘分区及开启与 NAND flash 所有相关的存储功能。

choice
    prompt "NAND interface type"
    depends on NAND_ENABLE
    default SPI_NAND     if (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856)
    default PPI_NAND     if CHIP_PKG_IT9078
    #default SPI_NAND
    help
        The option is the protocol between system and NAND Device.
    help_cht
        選擇系統與 NAND Device 之間的傳輸協定。
    help_chs
        选择系统与 NAND Device 之间的传输协定。

    config SPI_NAND
        bool "SPI NAND"
        depends on NAND_ENABLE
        help
            NAND with seriel port interface
        help_cht
            啟用SPI NAND
        help_chs
            启用SPI NAND

    config PPI_NAND
        bool "PPI NAND"
        depends on CHIP_PKG_IT9078
        help
            NAND with parallel port interface
        help_cht
            啟用parallel NAND
        help_chs
            启用parallel NAND

endchoice

choice
    prompt "SPI NAND choice SPI bus"
    depends on (NAND_ENABLE && SPI_NAND)
    default SPI_NAND_USE_SPI0 if DEF_SPI_NAND_USE_SPI0
    default SPI_NAND_USE_SPI1 if DEF_SPI_NAND_USE_SPI1
    default SPI_NAND_USE_AXISPI if (DEF_NAND_USE_AXISPI && CHIP_FAMILY_IT9860)
    default SPI_NAND_USE_AXISPI
    help
        SPI0/SPI1 bus choice.
    help_cht
        選擇 SPI0/SPI1 bus
    help_chs
        选择 SPI0/SPI1 bus

    config SPI_NAND_USE_AXISPI
        bool "SPI NAND use AXISPI"
        depends on (CHIP_FAMILY_IT9860 && SPI_NAND && AXISPI_ENABLE)
        help
            use AXISPI bus
        help_cht
            使用AXISPI bus
        help_chs
            启用AXISPI bus

    config SPI_NAND_USE_SPI0
        bool "SPI NAND use SPI0"
        depends on (SPI_NAND && SPI0_ENABLE)
        help
            use SPI0 bus
        help_cht
            使用SPI0 bus
        help_chs
            启用SPI0 bus

    config SPI_NAND_USE_SPI1
        bool "SPI NAND use SPI1"
        depends on (SPI_NAND && SPI1_ENABLE)
        help
            use SPI1 bus
        help_cht
            使用SPI1 bus
        help_chs
            启用SPI1 bus

endchoice

config NAND_PAGE_SIZE
    string "NAND page Size"
    depends on NAND_ENABLE
    default "2048"
    help
        NAND page size(only support 2048 or 4096 bytes/page)
    help_cht
        NAND的單頁大小(僅支援單頁2048或4096 bytes)
    help_chs
        NAND的单页大小(只支持单页2048或4096 bytes)

config NAND_BLOCK_SIZE
    string "NAND block Size"
    depends on NAND_ENABLE
    default "64"
    help
        NAND block size(only support 64 or 128 pages)
    help_cht
        NAND的區塊大小(只支援64或128 pages的NAND)
    help_chs
        NAND的区块大小(只支持64或128 pages的NAND)

config SPI_NAND_BOOT
    bool "Enable SPI NAND Boot"
    depends on (NAND_ENABLE && SPI_NAND && (CHIP_PKG_IT9852 || CHIP_PKG_IT9854 || CHIP_PKG_IT9856 || CHIP_FAMILY_IT9860))
    default n if NOR_ENABLE
    default y
    help
        SPI NAND boot
    help_cht
        啟用SPI NAND boot
    help_chs
        启用SPI NAND boot

choice
    prompt "Select SPI NAND QUAD Mode Address Type"
    depends on (SPI_NAND_BOOT && CHIP_FAMILY_IT9860)
    default SPI_NAND_ADDR_3_BYTE if DEF_SPI_NAND_ADDR_3_BYTE
    default SPI_NAND_ADDR_4_BYTE if DEF_SPI_NAND_ADDR_4_BYTE
    default SPI_NAND_ADDR_3_BYTE
    help
        HAS/NO Dummy address choice.
    help_cht
        選擇 HAS/NO Dummy address
    help_chs
        选择 HAS/NO Dummy address

    config SPI_NAND_ADDR_4_BYTE
    	bool "SPI QUAD Mode with 4-Bytes Address"
        help
            SPI QUAD Mode with 4-Bytes Address
            (for GD5FxGQ4xC/GD5FxGQ4xF and W25N01GVxxIT )
        help_cht
            SPI NAND位址使用4個字節
            (適用於兆易創新的GD5FxGQ4xC/GD5FxGQ4xF, 以及華邦的W25N01GVxxIT)
        help_chs
            SPI NAND地址无空字节
            (兆易创新的的GD5FxGQ4xC/GD5FxGQ4xF, 以及华邦的W25N01GVxxIT)

    config SPI_NAND_ADDR_3_BYTE
    	bool "SPI QUAD Mode with 3-Bytes Address"
        help
            SPI QUAD Mode with 3-Bytes Address
            (for Micron & MXIC & Winbond, Toshiba, XTX, and B/E type of GigaDevice)
        help_cht
            SPI NAND位址使用3個字節
            (適用於兆易創新的GD5FxGQ4xB/GD5FxGQ4xE與華邦的W25N01GVxxIG，以及美光、旺宏、華邦、東芝、芯天下等)
        help_chs
            SPI NAND地址使用3个字节
            (兆易创新的GD5FxGQ4xB/GD5FxGQ4xE、华邦的W25N01GVxxIG、美光、旺宏、华邦、东芝、芯天下等)

endchoice

config SPI_NAND_ADDR_TYPE
    string
    depends on (NAND_ENABLE && SPI_NAND && SPI_NAND_BOOT)
    default "0" if SPI_NAND_ADDR_3_BYTE
    default "8" if SPI_NAND_ADDR_4_BYTE

config NAND_ECC_DATA_SIZE
    string
    depends on (PPI_NAND || SPI_NAND)
    default "21"

config NAND_SPARE_SIZE
    string
    depends on (PPI_NAND || SPI_NAND)
    default "24"

config NOR_ENABLE
    bool "NOR Device"
    default n
    help
        The system will manage NOR partition as internal storage and implement all related functions if enable NOR Device.
    help_cht
        使系統能夠管理 NOR 磁碟分割區及開啟與 NOR flash 所有相關的存儲功能。
    help_chs
        使系统能够管理 NOR 磁盘分区及开启与 NOR flash 所有相关的存储功能。

config NOR_CACHE_SIZE
    string "NOR cache size"
    depends on NOR_ENABLE
    default "0"
    help
        NOR cache size, must align on 64k. 0 will disable write function.

        64k:    0x10000
        128k:   0x20000
        256k:   0x40000
        512k:   0x80000
        1M:     0x100000
    help_cht
        設定 NOR 的快取大小，必須是 64K 的倍數，如果設 0 則停用快取。

        64k:    0x10000
        128k:   0x20000
        256k:   0x40000
        512k:   0x80000
        1M:     0x100000
    help_chs
        设定 NOR 的快取大小，必须是 64K 的倍数，如果设 0 则停用快取。

        64k:    0x10000
        128k:   0x20000
        256k:   0x40000
        512k:   0x80000
        1M:     0x100000

config NOR_CACHE_FLUSH_INTERVAL
    string "NOR cache flush interval (sec)"
    depends on NOR_ENABLE
    default "0"
    help
        NOR cache flush interval (sec), 0 to disable auto flush cache.
    help_cht
        清空快取的時間間隔，單位為秒。如果設 0 則取消自動清空快取。
    help_chs
        清空快取的时间间隔，单位为秒。如果设 0 则取消自动清空快取。

config NOR_USE_AXISPI
    bool "NOR device use axispi"
    depends on AXISPI_ENABLE
    default "n"
    help
        use AXISPI to control device
    help_cht
        使用AXISPI控制裝置
    help_chs
        使用AXISPI控制装置

config NOR_ENABLE_QUADMODE
    bool "NOR enable QUADMODE"
    depends on (NOR_USE_AXISPI && AXISPI_ENABLE)
    default "n"
    help
        NOR device enable QUADMODE
    help_cht
        NOR裝置啟用QUAD模式
    help_chs
        NOR装置启用QUAD模式

config NOR_ENABLE_DTRMODE
    bool "NOR enable DTRMODE"
    depends on (NOR_USE_AXISPI && AXISPI_ENABLE && NOR_ENABLE_QUADMODE)
    default "n"
    help
        NOR device enable DTRMODE
    help_cht
        NOR裝置啟用DTR模式
    help_chs
        NOR装置启用DTR模式

config NOR_SHARE_GPIO
    bool "NOR need to share GPIO pin(s)"
    depends on 0
    default n
    help
        NOR Device need to share SPI GPIO pin(s) for SLAVE Device. System will access them in turn through share SPI pin if enable this function.
    help_cht
        NOR Device 將與 SLAVE Device 共享 SPI GPIO pin(s). 若開啟此功能，系統將輪流讀寫設備透過共享的 SPI pin
    help_chs
        NOR Device 将与 SLAVE Device 共享 SPI GPIO pin(s). 若开启此功能，系统将轮流读写设备透过共享的 SPI pin

config SD0_ENABLE
    bool "SD0 Device"
    default n
    help
        SD0 Card Device.
    help_cht
        啟用 SD0 功能，需至 GPIO 設置 SD0 相關設定。
    help_chs
        启用 SD0 功能，需至 GPIO 设置 SD0 相关设定。

config SD0_NO_PIN_SHARE
    bool "SD0 no pin share"
    default n
    depends on SD0_ENABLE
    help
        SD0 no pin share.
    help_cht
        SD0 沒有GPIO pin共享。
    help_chs
        SD0 没有GPIO pin共享。

config SD0_STATIC
    bool "SD0 as static device"
    default n
    depends on SD0_ENABLE
    help
        SD0 as static device. No need card detect gpio pin.(SD card)
    help_cht
        SD0 不支援插拔功能，不需設定卡偵測 GPIO。(SD卡)
    help_chs
        SD0 不支持插拔功能，不需设定卡侦测 GPIO。(SD卡)

config SD0_CARD_1BIT
    bool "SD0 card 1-bit mode"
    default n
    depends on SD0_ENABLE
    help
        SD0 card run with 1-bit mode.
    help_cht
        SD0 卡以 1-bit 模式運作。
    help_chs
        SD0 卡以 1-bit 模式运作。

config SD1_ENABLE
    bool "SD1 Device"
    default n
    help
        SD1 Card Device.
    help_cht
        啟用 SD1 功能，需至 GPIO 設置 SD1 相關設定。
    help_chs
        启用 SD1 功能，需至 GPIO 设置 SD1 相关设定。

config SD1_NO_PIN_SHARE
    bool "SD1 no pin share"
    default n
    depends on SD1_ENABLE
    help
        SD1 no pin share.
    help_cht
        SD1 沒有GPIO pin共享。
    help_chs
        SD1 没有GPIO pin共享。

config SD1_STATIC
    bool "SD1 as static device"
    default n
    depends on SD1_ENABLE
    help
        SD1 as static device. No need card detect gpio pin.(SD card)
    help_cht
        SD1 不支援插拔功能，不需設定卡偵測 GPIO。(SD卡)
    help_chs
        SD1 不支持插拔功能，不需设定卡侦测 GPIO。(SD卡)

config SD1_CARD_1BIT
    bool "SD1 card 1-bit mode"
    default n
    depends on SD1_ENABLE
    help
        SD1 card run with 1-bit mode.
    help_cht
        SD1 卡以 1-bit 模式運作。
    help_chs
        SD1 卡以 1-bit 模式运作。

config MMC_ENABLE
    bool "SD New Driver"
    #depends on (SD0_ENABLE || SD1_ENABLE)
    default y
    help
        New SD driver.
    help_cht
        啟用 SD 新驅動程式。
    help_chs
        启用 SD 新驱动程序 。

config XD_ENABLE
    bool "xD Device"
    depends on CHIP_PKG_IT9078
    default n
    help
        xD Device. RD internal use only.
    help_cht
        啟用 xD 卡支援
    help_chs
        启用 xD 卡支持

config RAMDISK_ENABLE
    bool "RAM Disk Device"
    default n
    help
        RAM Disk Device. RD internal use only.
    help_cht
        啟用記憶體磁碟區功能。
    help_chs
        启用内存磁盘区功能。

config RAMDISK_SIZE
    string "RAM Disk size"
    default "1048576"
    depends on RAMDISK_ENABLE
    help
        RAM Disk size
    help_cht
        記憶體磁碟區大小。
    help_chs
        内存磁碟区大小。

config MSC_ENABLE
    bool "USB Mass Storage Class"
    default y if UAS_ENABLE
    default n
    depends on (USB0_ENABLE || USB1_ENABLE)
    help
        USB Mass Storage Class Driver
    help_cht
        啟用 USB 大量儲存裝置模式。
    help_chs
        启用 USB 大量储存装置模式。

config UAS_ENABLE
    bool "USB Attached SCSI"
    default n
    depends on (USB0_ENABLE || USB1_ENABLE)
    help
        USB Attached SCSI protocol driver. RD internal use only.
    help_cht
        啟用 UASP(USB Attached SCSI protocol) 傳輸協定。
    help_chs
        启用 UASP(USB Attached SCSI protocol) 传输协议。
endmenu


menu "File System"

config FS_FAT
    bool "FAT File System"
    depends on (NAND_ENABLE || NOR_ENABLE || SD0_ENABLE || SD1_ENABLE || USB0_ENABLE || USBH_CD_MST || RAMDISK_ENABLE)
    default n
    help
        This need to be enabled to mount internal or external storage as FAT disk.
        The disk will be mounted as A: B: C: ... by the mounting order.
        The first disk is A:. The mounting order is:

        1. NAND
        2. NOR
        3. Internal SD0
        4. Internal SD1
        5. RAM disk
        6. SD0
        7. SD1
        8. xD
        9. USB
    help_cht
        啟用FAT檔案系統的功能。當需要將內部或外部儲存區掛入成FAT磁碟機時須要打開這項功能。
        磁碟機會依照它掛入的順序被掛入成 A: B: C: ... 。第一個掛入的磁碟機會是 A:。掛入順序是：

        1. NAND
        2. NOR
        3. Internal SD0
        4. Internal SD1
        5. RAM disk
        6. SD0
        7. SD1
        8. xD
        9. USB
    help_chs
        启用FAT文件系统的功能。当需要将内部或外部储存区挂入成FAT磁盘驱动器时须要打开这项功能。
        磁盘驱动器会依照它挂入的顺序被挂入成 A: B: C: ... 。第一个挂入的磁盘驱动器会是 A:。挂入顺序是：

        1. NAND
        2. NOR
        3. Internal SD0
        4. Internal SD1
        5. RAM disk
        6. SD0
        7. SD1
        8. xD
        9. USB

config NAND_RESERVED_SIZE
    string "NAND reserved size"
    depends on NAND_ENABLE
    default "0x1000000"
    help
        NAND reserved size, must align on 256k.

        256k:   0x40000
        512k:   0x80000
        1M:     0x100000
    help_cht
        NAND 中未格式化區域的空間大小，必須是 256K 的倍數。

        256k:   0x40000
        512k:   0x80000
        1M:     0x100000
    help_chs
        NAND 中未格式化区域的空间大小，必须是 256K 的倍数。

        256k:   0x40000
        512k:   0x80000
        1M:     0x100000

config NAND_PARTITION0
    bool "NAND disk partition 0"
    depends on NAND_ENABLE
    default n
    help
        Enable NAND disk partition 0 as internal storage.
    help_cht
        啟用 NAND 的磁碟分割區 0。
    help_chs
        启用 NAND 的磁盘分区 0。

config NAND_PARTITION0_SIZE
    string "The partition 0 size of NAND disk"
    depends on NAND_PARTITION0
    default "0"
    help
        The size of NAND partition 0, must align on 256k. 0 indicate the maximum size.

        256k:   0x40000
        512k:   0x80000
        1M:     0x100000
    help_cht
        磁碟分割區 0 的大小，必須是 256K 的倍數。設 0 為使用全部剩下的空間。

        256k:   0x40000
        512k:   0x80000
        1M:     0x100000
    help_chs
        磁盘分区 0 的大小，必须是 256K 的倍数。设 0 为使用全部剩下的空间。

        256k:   0x40000
        512k:   0x80000
        1M:     0x100000

config NAND_PARTITION1
    bool "NAND disk partition 1"
    depends on NAND_PARTITION0
    default n
    help
        Enable NAND disk partition 1 as internal storage.
    help_cht
        啟用 NAND 的磁碟分割區 1。
    help_chs
        启用 NAND 的磁盘分区 1。

