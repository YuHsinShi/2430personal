    bool "CANBUS Enalbe"
    default n
    help
        Enable Canbus
    help_cht
        啟用 Canbus 模組。
    help_chs
        启用 Canbus 模块。
endmenu


menu "Power"
    hidden if DEV_DEVELOP

config POWER_ON
    bool "Power On mode"
    depends on 0
    default n
    help
        Support Power On mode or not.
    help_cht
        開啟電源功能。
    help_chs
        开启电源功能。

config POWER_OFF
    bool "Power Off mode"
    depends on POWER_ON
    default n
    help
        Support Power off mode or not.
    help_cht
        開啟關閉電源功能。
    help_chs
        开启关闭电源功能。

config POWER_SAVING_ENABLE
    bool "Enable power saving mode"
    default n
    help
        Enable power saving mode.
    help_cht
        開啟省電模式。
    help_chs
        开启省电模式。

choice
    prompt "Select power saving mode"
    default POWER_STANDBY if DEF_POWER_STANDBY
    default POWER_SLEEP if DEF_POWER_SLEEP
    depends on POWER_SAVING_ENABLE
    help
        Select power saving mode.
    help_cht
        選擇省電模式。
    help_chs
        选择省电模式。

config POWER_STANDBY
    bool "Standby mode enable"
    help
        Support standby mode or not.
    help_cht
        開啟省電待機模式功能。
    help_chs
        开启省电待机模式功能。

config POWER_STANDBY_CPU_FREQ_RATIO
    string "CPU frequency ratio of standby mode"
    depends on POWER_STANDBY
    default "0"
    help
        CPU recent frequency ratio of standby mode. Range from 1 to 1024.

        1 ==> 1:1
        2 ==> 2:1
        3 ==> 3:1
        ...
        1024 ==> 1024:1
    help_cht
        CPU 當下的頻率除頻比率。範圍從 1 到 1024。

        1 ==> 1:1
        2 ==> 2:1
        3 ==> 3:1
        ...
        1024 ==> 1024:1
    help_chs
        CPU 当下的频率除频比率。范围从 1 到 1024。

        1 ==> 1:1
        2 ==> 2:1
        3 ==> 3:1
        ...
        1024 ==> 1024:1

config POWER_STANDBY_BUS_FREQ_RATIO
    string "Bus frequency ratio of standby mode"
    depends on POWER_STANDBY
    default "1"
    help
        Bus recent frequency ratio of standby mode. Range from 1 to 1024.

        1 ==> 1:1
        2 ==> 2:1
		3 ==> 3:1
        ...
        1024 ==> 1024:1

        In Standby mode, range from 1 to M.
        The formula to calculate the value fo M:
        old_WCLKRatio*M = new_WCLKRatio
        original_WCLK/new_WCLKRatio = new_WCLK
        new_WCLK/Baud_Rate/16 >= 2
        Example:
        When the baud rate is 115200. (old_WCLKRatio=2, original_WCLK=240000000)
        115200*2*16 = 3686400(new_WCLK limit)
        240000000/3686400 = 65(new_WCLKRatio limit)
        65/2 = 32(M value)

    help_cht
        匯流排當下的頻率除頻比率。範圍從 1 到 1024。

        1 ==> 1:1
        2 ==> 2:1
        3 ==> 3:1
        ...
        1024 ==> 1024:1

        當在Standby mode欲使用UART時。範圍從 1 到 M 值。
        M值運算公式如下:
        old_WCLKRatio*M = new_WCLKRatio
        original_WCLK/new_WCLKRatio = new_WCLK
        new_WCLK/Baud_Rate/16 >= 2
        舉例:
        當UART Baud Rate使用115200時。(old_WCLKRatio=2, original_WCLK=240000000)
        115200*2*16 = 3686400(new_WCLK極限值)
        240000000/3686400 = 65(new_WCLKRatio極限值)
        65/2 = 32(M值)

    help_chs
        总线当下的频率除频比率。范围从 1 到 1024。

        1 ==> 1:1
        2 ==> 2:1
        3 ==> 3:1
        ...
        1024 ==> 1024:1

        当在Standby mode欲使用UART时。范围从 1 到 M 值。
        M值运算公式如下:
        old_WCLKRatio*M = new_WCLKRatio
        original_WCLK/new_WCLKRatio = new_WCLK
        new_WCLK/Baud_Rate/16 >= 2
        举例:
        当UART Baud Rate使用115200时。(old_WCLKRatio=2, original_WCLK=240000000)
        115200*2*16 = 3686400(new_WCLK极限值)
        240000000/3686400 = 65(new_WCLKRatio极限值)
        65/2 = 32(M值)

config POWER_SLEEP
    bool "Sleep mode enable"
    help
        Support sleep mode or not.
    help_cht
        開啟省電睡眠模式功能。
    help_chs
        开启省电睡眠模式功能。

endchoice

choice
    prompt "Wakeup method on sleep mode"
    depends on POWER_SLEEP && POWER_SAVING_ENABLE
    default POWER_WAKEUP_DELAY if DEF_POWER_WAKEUP_DELAY
    default POWER_WAKEUP_TOUCH_ONE_CLICK if DEF_POWER_WAKEUP_TOUCH_ONE_CLICK
	default POWER_WAKEUP_TOUCH_DOUBLE_CLICK if DEF_POWER_WAKEUP_TOUCH_DOUBLE_CLICK
    default POWER_WAKEUP_KEYPAD if DEF_POWER_WAKEUP_KEYPAD
    default POWER_WAKEUP_IR if DEF_POWER_WAKEUP_IR
    default POWER_WAKEUP_UART if DEF_POWER_WAKEUP_UART
    default POWER_WAKEUP_WOL if DEF_POWER_WAKEUP_WOL
    default POWER_WAKEUP_TOUCH_ONE_CLICK
    help
        choice wakeup method from sleep mode
    help_cht
        選擇從睡眠模式喚醒的方法
    help_chs
        选择从睡眠模式唤醒的方法

config POWER_WAKEUP_DELAY
    bool "Wakeup by constant delay"
    depends on 0
    help
        Wakeup by constant delay.
    help_cht
        由固定延遲時間自動喚醒。
    help_chs
        由固定延迟时间自动唤醒。

config POWER_WAKEUP_TOUCH_ONE_CLICK
    bool "Wakeup by touch one click"
    depends on (POWER_SLEEP && POWER_SAVING_ENABLE && TOUCH_ENABLE)
    help
        Wakeup by touch one click.
    help_cht
        由觸控螢幕單擊喚醒。
    help_chs
        由触控屏单击唤醒。

config POWER_WAKEUP_TOUCH_DOUBLE_CLICK
    bool "Wakeup by touch double click"
    depends on 0
    help
        Wakeup by touch double click.
    help_cht
        由觸控螢幕雙擊喚醒。
    help_chs
        由触控屏双击唤醒。

config POWER_WAKEUP_KEYPAD
    bool "Wakeup by keypad"
    depends on 0
    help
        Wakeup by keypad
    help_cht
        由按鍵喚醒。
    help_chs
        由按键唤醒。

config POWER_WAKEUP_IR
    bool "Wakeup by remote IR"
    depends on 0
    help
        Wakeup by remote IR
    help_cht
        由遙控器 (IR) 喚醒。
    help_chs
        由遥控器 (IR) 唤醒。

config POWER_WAKEUP_UART
    bool "Wakeup by Uart"
    depends on 0
    help
        Wakeup by Uart
    help_cht
        由遠端Uart裝置喚醒。
    help_chs
        由远程Uart装置唤醒。

config POWER_WAKEUP_WOL
    bool "Wakeup by Wake on Lan"
    depends on 0
    help
        Wakeup by Wake on Lan
    help_cht
        由網路 (WoL) 喚醒。
    help_chs
        由网路 (WoL) 唤醒。

config POWER_WAKEUP_GPIO
    bool "Wakeup by GPIO"
    depends on (POWER_SLEEP)
    help
        Wakeup by GPIO
    help_cht
        由按鍵喚醒，可自行定義所需要的GPIO pin與個數。
    help_chs
        由按键唤醒，可自行定义所需要的GPIO pin与个数。

endchoice

config POWER_WAKEUP_DOUBLE_CLICK_INTERVAL
    string "Set double click interval for wakeup"
    depends on POWER_WAKEUP_TOUCH_DOUBLE_CLICK
    default "500"
    help
        Setting double click Interval for wakeup(ms)
    help_cht
        設定雙擊喚醒時間間隔(單位: ms)。
    help_chs
        设定双击唤醒时间间隔(单位: ms)。

config POWER_WAKEUP_DELAYLOOP
    string "Wakeup delay loop on sleep mode"
    depends on POWER_WAKEUP_DELAY
    default "1000"
    help
        Wakeup delay loop on sleep mode
    help_cht
        固定延遲喚醒時間。
    help_chs
        固定延迟唤醒时间。

config POWER_WAKEUP_KEYNUM
    string "Wakeup key number on sleep mode"
    depends on POWER_WAKEUP_KEYPAD
    default "0"
    help
        Wakeup key number on sleep mode
    help_cht
        按鍵喚醒號碼。
    help_chs
        按键唤醒号码。

config POWER_WAKEUP_GPIO_PIN
    string "Wakeup GPIO pin number on sleep mode"
    depends on POWER_WAKEUP_GPIO
    default "75"
    help
        Wakeup GPIO pin number on sleep mode
    help_cht
        使用GPIO喚醒的號碼。
    help_chs
        使用GPIO唤醒的号码。

config POWER_HIBERNATION
    bool "Hibernation mode enable"
    depends on NET_ETHERNET_WAKE_ON_LAN
    default n
    help
        Support hibernation mode or not
    help_cht
        開啟省電冬眠模式功能。
    help_chs
        开启省电冬眠模式功能。

config POWER_SUSPEND
    bool "Suspend mode enable"
    depends on 0
    depends on RTC_ENABLE
    default n
    help
        Support suspend mode or not.
    help_cht
        開啟省電休眠模式功能。
    help_chs
        开启省电休眠模式功能。

config POWER_DOZE
    bool "CPU doze mode enable"
    default y
    help
        CPU doze mode enable or not.
    help_cht
        開啟 CPU 節能模式 (doze)
    help_chs
        开启 CPU 节能模式 (doze)

config POWER_TICKLESS_IDLE
    bool "CPU tickless idle enable"
    default n
    help
        CPU tickless idle enable or not.
    help_cht
        開啟 CPU 節能模式 (tickless)
    help_chs
        开启 CPU 节能模式 (tickless)

endmenu


menu "GPIO"

config GPIO_SD0_CARD_DETECT
    string "SD0 Card Detect Pin"
    depends on (SD0_ENABLE && !SD0_STATIC && !SDIO0_STATIC)
    default "-1"
    help
        The GPIO number for SD0 card detect pin.
    help_cht
        SD0 卡偵測的 GPIO 號碼。
    help_chs
        SD0 卡侦测的 GPIO 接口。

config SD0_CARD_DETECT_ACTIVE_HIGH
    bool "SD0 Card Detect Pin Active High"
    depends on (SD0_ENABLE && !SD0_STATIC && !SDIO0_STATIC)
    default n
    help
        Card detect pin is active high.
    help_cht
        插入為高電平。
    help_chs
        插入为高电平。

config GPIO_SD0_POWER_ENABLE
    string "SD0 Power Enable Pin"
    depends on SD0_ENABLE
    default "-1"
    help
        The GPIO number for SD0 power enable pin.
    help_cht
        SD0 電源的 GPIO 號碼。
    help_chs
        SD0 电源的 GPIO 接口。

config GPIO_SD0_WRITE_PROTECT
    string "SD0 Write Protect Pin"
    depends on SD0_ENABLE
    default "-1"
    help
        The GPIO number for SD0 write protect pin.
    help_cht
        SD0 防寫的 GPIO 號碼。
    help_chs
        SD0 防写的 GPIO 接口。

config GPIO_SD0_IO
    string "SD0 I/O pins"
    depends on SD0_ENABLE
    default "6, 8, 9, 10, 11, 12, 20, 21, 22, 23"
    help
        Pin name: SD0CLK, SDCMD, SD_D0, SD_D1, SD_D2, SD_D3, SD_D4, SD_D5, SD_D6, SD_D7
        1'st gpio should be clock pin.
        If only support 4-bits data pin, SD_D4 ~ SD_D7 all set to -1.
        RD internal use only.
    help_cht
        SD0 介面對應的 GPIO 號碼，名稱為 SD0CLK, SDCMD, SD_D0, SD_D1, SD_D2, SD_D3, SD_D4, SD_D5, SD_D6, SD_D7。
        第一個必需為 SD0CLK。若只支援 4 個位元，則 SD_D4 ~ SD_D7 皆設為 -1。
    help_chs
        SD0 接口对应的 GPIO 号码，名称为 SD0CLK, SDCMD, SD_D0, SD_D1, SD_D2, SD_D3, SD_D4, SD_D5, SD_D6, SD_D7。
        第一个必需为 SD0CLK。若只支持 4 个位元，则 SD_D4 ~ SD_D7 皆设为 -1。。

config GPIO_SD1_IO
    string "SD1 I/O pins"
    depends on SD1_ENABLE
    default "7, 8, 9, 10, 11, 12, 20, 21, 22, 23"
    help
        Pin name: SD0CLK, SDCMD, SD_D0, SD_D1, SD_D2, SD_D3, SD_D4, SD_D5, SD_D6, SD_D7
        1'st gpio should be clock pin.
        If only support 4-bits data pin, SD_D4 ~ SD_D7 all set to -1.
    help_cht
        SD1 介面對應的 GPIO 號碼，名稱為 SD1CLK, SDCMD, SD_D0, SD_D1, SD_D2, SD_D3, SD_D4, SD_D5, SD_D6, SD_D7。
        第一個必需為 SD1CLK。若只支援 4 個位元，則 SD_D4 ~ SD_D7 皆設為 -1。
    help_chs
        SD1 接口对应的 GPIO 接口，名称为 SD1CLK, SDCMD, SD_D0, SD_D1, SD_D2, SD_D3, SD_D4, SD_D5, SD_D6, SD_D7。
        第一个必需为 SD1CLK。若只支持 4 个位元，则 SD_D4 ~ SD_D7 皆设为 -1。

config GPIO_SD1_CARD_DETECT
    string "SD1 Card Detect Pin"
    depends on (SD1_ENABLE && !SD1_STATIC && !SDIO1_STATIC)
    default "-1"
    help
        The GPIO number for SD1 card detect pin.
    help_cht
        SD1 卡偵測的 GPIO 號碼。
    help_chs
        SD1 卡侦测的 GPIO 接口。

config SD1_CARD_DETECT_ACTIVE_HIGH
    bool "SD1 Card Detect Pin Active High"
    depends on (SD1_ENABLE && !SD1_STATIC && !SDIO1_STATIC)
    default n
    help
        Card detect pin is active high.
    help_cht
        插入為高電平。
    help_chs
        插入为高电平。

