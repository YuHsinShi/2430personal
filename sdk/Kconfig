    string "SD1 WIFI Power Pin"
	depends on (GPIO_SD1_WIFI_POWER_ENABLE && (NET_WIFI_SDIO_NGPL || NET_WIFI_SDIO_SSV))
    default "-1"
    help
        The GPIO number for SD1 power pin.
    help_cht
        SD1 WIFI 電源的 GPIO 號碼。
    help_chs
        SD1 WIFI 电源的 GPIO 接口。

config SD1_WIFI_DETECT_ACTIVE_HIGH
    bool "SD1 WIFI Detect Pin Active High"
    depends on (GPIO_SD1_WIFI_POWER_ENABLE && (NET_WIFI_SDIO_NGPL || NET_WIFI_SDIO_SSV))
    default n
    help
        WIFI detect pin is active high.
    help_cht
        WIFI插入為高電平。
    help_chs
        WIFI插入为高电平。

