#config AUDIO_CODEC_AC3DEC
#    bool
#    prompt "AC3 Decode Codec" if DEV_DEVELOP
#    depends on AUDIO_ENABLE
#    default n
#    help
#        Enable AC3 decode
#    help_cht
#        啟用 AC3 decode
#    help_chs
#        启用 AC3 decode

