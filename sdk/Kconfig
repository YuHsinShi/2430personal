        SW PWM3 的 GPIO 接口。

config GPIO_SW_UART_TX
    string "SW Uart Tx Pin"
    depends on (SW_UART && !RS485_4_ENABLE && !DBG_SWUART_CODEC)
    default "-1"
    help
        The GPIO pin number for SW Uart Tx.
    help_cht
        SW UART TX的 GPIO 號碼。
    help_cht
        SW UART TX的 GPIO 接口。

config GPIO_SW_UART_RX
    string "SW Uart Rx Pin"
    depends on (SW_UART && !RS485_4_ENABLE && !DBG_SWUART_CODEC)
    default "-1"
    help
        The GPIO pin number for SW Uart Rx.
    help_cht
        SW UART RX的 GPIO 號碼。
    help_cht
        SW UART RX的 GPIO 接口。

config GPIO_SW_RS232_0_TX
    string "SW RS232_0 Tx Pin"
    depends on SW_RS232_0_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS232_0 Tx.
    help_cht
        SW RS232_0 TX的 GPIO 號碼。
    help_cht
        SW RS232_0 TX的 GPIO 接口。

config GPIO_SW_RS232_0_RX
    string "SW RS232_0 Rx Pin"
    depends on SW_RS232_0_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS232_0 Rx.
    help_cht
        SW RS232_0 RX的 GPIO 號碼。
    help_cht
        SW RS232_0 RX的 GPIO 接口。

config GPIO_SW_RS232_1_TX
    string "SW RS232_1 Tx Pin"
    depends on SW_RS232_1_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS232_1 Tx.
    help_cht
        SW RS232_1 TX的 GPIO 號碼。
    help_cht
        SW RS232_1 TX的 GPIO 接口。

config GPIO_SW_RS232_1_RX
    string "SW RS232_1 Rx Pin"
    depends on SW_RS232_1_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS232_1 Rx.
    help_cht
        SW RS232_1 RX的 GPIO 號碼。
    help_cht
        SW RS232_1 RX的 GPIO 接口。

config GPIO_SW_RS485_0_TX
    string "SW RS485_0 Tx Pin"
    depends on SW_RS485_0_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS485_0 Tx.
    help_cht
        SW RS485_0 TX的 GPIO 號碼。
    help_cht
        SW RS485_0 TX的 GPIO 接口。

config GPIO_SW_RS485_0_TX_ENABLE
    string "SW RS485_0 TX Enable Pin"
    depends on SW_RS485_0_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS485_0 TX Enable.
    help_cht
        SW RS485_0 TX Enable 的 GPIO 號碼。
    help_cht
        SW RS485_0 TX Enable 的 GPIO 接口。

config GPIO_SW_RS485_0_RX
    string "SW RS485_0 Rx Pin"
    depends on SW_RS485_0_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS485_0 Rx.
    help_cht
        SW RS485_0 RX的 GPIO 號碼。
    help_cht
        SW RS485_0 RX的 GPIO 接口。

config GPIO_SW_RS485_1_TX
    string "SW RS485_1 Tx Pin"
    depends on SW_RS485_1_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS485_0 Tx.
    help_cht
        SW RS485_1 TX的 GPIO 號碼。
    help_cht
        SW RS485_1 TX的 GPIO 接口。

config GPIO_SW_RS485_1_TX_ENABLE
    string "SW RS485_1 TX Enable Pin"
    depends on SW_RS485_1_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS485_1 TX Enable.
    help_cht
        SW RS485_1 TX Enable 的 GPIO 號碼。
    help_cht
        SW RS485_1 TX Enable 的 GPIO 接口。

config GPIO_SW_RS485_1_RX
    string "SW RS485_1 Rx Pin"
    depends on SW_RS485_1_ENABLE
    default "-1"
    help
        The GPIO pin number for SW RS485_1 Rx.
    help_cht
        SW RS485_1 RX的 GPIO 號碼。
    help_cht
        SW RS485_1 RX的 GPIO 接口。

config GPIO_SN1_RST
    string "SENSOR RESET GPIO Pin"
    depends on SENSOR_RESETPIN_ENABLE
    default "-1"
    help
        The GPIO pin number for SN1 RESET Pin.
    help_cht
        SN1 RESET 的 GPIO 號碼。
    help_cht
        SN1 RESET 的 GPIO 接口。

config GPIO_SN1_PWN
    string "SENSOR POWER DOWN GPIO Pin"
    depends on SENSOR_POWERDOWNPIN_ENABLE
    default "-1"
    help
       The GPIO pin number for SN1 POWER Pin.
    help_cht
        SN1 POWER 的 GPIO 號碼。
    help_cht
        SN1 POWER 的 GPIO 號碼。

config GPIO_SN1_LED
    string "SENSOR LED GPIO Pin"
    depends on SENSOR_LEDPIN_ENABLE
    default "-1"
    help
       The GPIO pin number for SN1 LED Pin.
    help_cht
        SN1 LED 的 GPIO 號碼。
    help_cht
        SN1 LED 的 GPIO 號碼。

config GPIO_SN1_MCLK
    string "SENSOR MCLK GPIO Pin"
    depends on SENSOR_MCLKPIN_ENABLE
    default "47" if DEF_CHIP_PKG_IT972
    default "51" if DEF_CHIP_PKG_IT976
    default "-1"
    help
       The GPIO pin number for SN1 MCLK Pin.
    help_cht
        SN1 MCLK 的 GPIO 號碼。
    help_cht
        SN1 MCLK 的 GPIO 號碼。

config GPIO_XAIN_0_RX
    string "XAIN_0 RX Pin"
    depends on SARADC_ENABLE
    default "19"
    help
        The GPIO pin number for SARADC XAIN_0 RX.
    help_cht
        SARADC XAIN_0 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_0 RX 的 GPIO 接口。

config GPIO_XAIN_1_RX
    string "XAIN_1 RX Pin"
    depends on SARADC_ENABLE
    default "20"
    help
        The GPIO pin number for SARADC XAIN_1 RX.
    help_cht
        SARADC XAIN_1 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_1 RX 的 GPIO 接口。

config GPIO_XAIN_2_RX
    string "XAIN_2 RX Pin"
    depends on SARADC_ENABLE
    default "21"
    help
        The GPIO pin number for SARADC XAIN_2 RX.
    help_cht
        SARADC XAIN_2 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_2 RX 的 GPIO 接口。

config GPIO_XAIN_3_RX
    string "XAIN_3 RX Pin"
    depends on SARADC_ENABLE
    default "22"
    help
        The GPIO pin number for SARADC XAIN_3 RX.
    help_cht
        SARADC XAIN_3 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_3 RX 的 GPIO 接口。

config GPIO_XAIN_4_RX
    string "XAIN_4 RX Pin"
    depends on SARADC_ENABLE
    default "23"
    help
        The GPIO pin number for SARADC XAIN_4 RX.
    help_cht
        SARADC XAIN_4 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_4 RX 的 GPIO 接口。

config GPIO_XAIN_5_RX
    string "XAIN_5 RX Pin"
    depends on SARADC_ENABLE
    default "24"
    help
        The GPIO pin number for SARADC XAIN_5 RX.
    help_cht
        SARADC XAIN_5 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_5 RX 的 GPIO 接口。

config GPIO_XAIN_6_RX
    string "XAIN_6 RX Pin"
    depends on SARADC_ENABLE
    default "25"
    help
        The GPIO pin number for SARADC XAIN_6 RX.
    help_cht
        SARADC XAIN_6 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_6 RX 的 GPIO 接口。

config GPIO_XAIN_7_RX
    string "XAIN_7 RX Pin"
    depends on SARADC_ENABLE
    default "26"
    help
        The GPIO pin number for SARADC XAIN_7 RX.
    help_cht
        SARADC XAIN_7 RX 的 GPIO 號碼。
    help_chs
        SARADC XAIN_7 RX 的 GPIO 接口。

endmenu

menu "Network"

config NET_ENABLE
    bool "Enable Network"
    default n
    help
        Enable network function or not.
    help_cht
        啟用網路功能。
    help_chs
        启用网路功能。

#######################################################################
config NET_ETHERNET
    bool "Enable Ethernet module"
    depends on NET_ENABLE
    default n
    help
        Enable Ethernet module or not.
    help_cht
        開啟 Ethernet 模組功能。
    help_chs
        开启 Ethernet 模块功能。

choice
    prompt "External device type"
    default NET_RTL8304MB if DEF_NET_RTL8304MB
    default NET_AMEBA_SDIO if DEF_NET_AMEBA_SDIO
    default NET_IP101GR if DEF_NET_IP101GR
    default NET_LAN8720 if DEF_NET_LAN8720
    default NET_RTL8211F if DEF_NET_RTL8211F
    default NET_RTL8363NB if DEF_NET_RTL8363NB
    default NET_IP175LLF if DEF_NET_IP175LLF
    default NET_RTL8201FL
    depends on NET_ETHERNET
    help
        External device type.
    help_cht
        外接裝置型號。
    help_chs
        外接装置型号。

config NET_RTL8201FL
    bool "RTL8201FL"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100Mbps ethernet phyceiver.
    help_cht
        單晶片/單埠 10/100Mbps 乙太網路收發器。
    help_chs
        单芯片/单端口 10/100Mbps 以太网络收发器。

config NET_IP101GR
    bool "IP101GR"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100Mbps ethernet transceiver.
    help_cht
        單晶片/單埠 10/100Mbps 乙太網路收發器。
    help_chs
        单芯片/单端口 10/100Mbps 以太网络收发器。

config NET_LAN8720
    bool "LAN8720"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100Mbps ethernet transceiver.
        It does not support link interrupt.
    help_cht
        單晶片/單埠 10/100Mbps 乙太網路收發器。
        不支援連接中斷功能。
    help_chs
        单芯片/单端口 10/100Mbps 以太网络收发器。
        不支持连接中断功能。

config NET_RTL8211F
    bool "RTL8211F"
    depends on NET_ETHERNET
    help
        Single-chip/single-port 10/100/1000Mbps ethernet phyceiver.
    help_cht
        單晶片/單埠 10/100/1000Mbps 乙太網路收發器。
    help_chs
        单芯片/单端口 10/100/1000Mbps 以太网络收发器。

config NET_RTL8304MB
    bool "RTL8304MB"
    depends on NET_ETHERNET
    help
        4-port 10/100Mbps ethernet switch controller.
    help_cht
        4-埠 10/100Mbps 乙太網路交換器。
    help_chs
        4-端口 10/100Mbps 以太网络交换器。

config NET_IP175LLF
    bool "IP175LLF"
    depends on NET_ETHERNET
    help
        5-port 10/100Mbps ethernet switch controller.
    help_cht
        5-埠 10/100Mbps 乙太網路交換器。
    help_chs
        5-端口 10/100Mbps 以太网络交换器。

config NET_RTL8363NB
    bool "RTL8363NB"
    depends on NET_ETHERNET
    help
        3-port 10/100M & 10/100/1000M ethernet switch controller.
    help_cht
        3-埠 10/100M & 10/100/1000M 乙太網路交換器。
    help_chs
        3-端口 10/100M & 10/100/1000M 以太网络交换器。

config NET_AMEBA_SDIO
    bool "Ameba iNIC (SDIO)"    if DEV_DEVELOP
    depends on (NET_ETHERNET)
    help
        Realtek ameba iNIC with SDIO interface.
    help_cht
        Realtek ameba iNIC with SDIO interface.
    help_chs
        Realtek ameba iNIC with SDIO interface.

endchoice


config NET_MAC_RXD_DELAY
    string "MAC rx data delay"
    depends on (NET_ETHERNET)
    default "0x0"
    help
        Rx data delay value. (0x0~0xF)
    help_cht
        Rx 資料延遲。(0x0~0xF)
    help_chs
        Rx 资料延迟。(0x0~0xF)

config NET_MAC_CLOCK_INVERSE
    string "MAC clock inverse"
    depends on (NET_ETHERNET)
    default "0"
    help
        Clock inverse. (0: normal, 1: inverse)
    help_cht
        Clock 反相。(0: 正常, 1: 反相)
    help_chs
        Clock 反相。(0: 正常, 1: 反相)

config NET_MAC_CLOCK_DELAY
    string "MAC clock delay"
    depends on (NET_ETHERNET)
    default "0"
    help
        Clock delay value. (0x0~0xF)
    help_cht
        Clock 延遲。(0x0~0xF)
    help_chs
        Clock 延迟。(0x0~0xF)

config NET_MAC_INIT_ON_BOOTLOADER
    bool "Initialize MAC on bootloader"
    depends on (NET_ETHERNET && !NET_RTL8304MB && !NET_RTL8363NB)
    default n
    help
        Initialize MAC on bootloader or not.
    help_cht
        是否在 bootloader 中初始化 Mac。
    help_chs
        是否在 bootloader 中初始化 Mac。


config NET_ETHERNET_PHY_ADDR
    string "Ethernet PHY's address"
    depends on (NET_ETHERNET && !NET_AMEBA_SDIO && !NET_RTL8304MB && !NET_RTL8363NB)
    default "0"
    help
        PHY address
    help_cht
        PHY 的位址。
    help_chs
        PHY 的位址。

config NET_ETHERNET_LINK_INTR
    bool "Enable Ethernet link interrupt"
    depends on (NET_ETHERNET &&  !NET_AMEBA_SDIO && !NET_LAN8720)
    default y
    help
        Enable Ethernet link interrupt
    help_cht
        啟用連接中斷功能。
    help_chs
        启用连接中断功能。

config NET_ETHERNET_WAKE_ON_LAN
    bool "Enable Ethernet Wake on Lan support"
    depends on (NET_ETHERNET && NET_RTL8201FL && !NET_AMEBA_SDIO)
    default n
    help
        Enable Ethernet Wake on LAN
    help_cht
        啟用網路喚醒功能。
    help_chs
        启用网络唤醒功能。

config NET_ETHERNET_MAC_ADDR_RANDOM
    bool "Random MAC address"
    depends on NET_ETHERNET
    default n
    help
        Randomize MAC address if not available.
    help_cht
        亂數決定 MAC address。
    help_chs
        随机数决定 MAC address。

config NET_ETHERNET_MAC_ADDR_DEFAULT
    string "Default ethernet MAC address"
    depends on (NET_ETHERNET && !NET_ETHERNET_MAC_ADDR_RANDOM)
    default "0x02, 0x22, 0x33, 0x44, 0x55, 0x66"
    help
        Default ethernet MAC address.
    help_cht
        MAC address 預設值。
    help_chs
        MAC address 默认值。

config NET_ETHERNET_MAC_ADDR_STORAGE
    bool "MAC address data is stored in static storage"
    depends on (NET_ETHERNET && (NAND_ENABLE || NOR_ENABLE || SD0_ENABLE || SD1_ENABLE))
    default n
    help
        MAC address data is stored in static storage.
    help_cht
        將 MAC address 儲存在內部儲存裝置。
    help_chs
        将 MAC address 储存在内部储存装置。

choice
    prompt "MAC address data location"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default NET_ETHERNET_MAC_ADDR_NAND if DEF_NET_ETHERNET_MAC_ADDR_NAND
    default NET_ETHERNET_MAC_ADDR_NOR if DEF_NET_ETHERNET_MAC_ADDR_NOR
    default NET_ETHERNET_MAC_ADDR_SD0 if DEF_NET_ETHERNET_MAC_ADDR_SD0
    default NET_ETHERNET_MAC_ADDR_SD1 if DEF_NET_ETHERNET_MAC_ADDR_SD1
    default NET_ETHERNET_MAC_ADDR_NOR
    help
        The data location of MAC address
    help_cht
        MAC address 存放位置。
    help_chs
        MAC address 存放位置。

config NET_ETHERNET_MAC_ADDR_NAND
    bool "MAC address data in NAND"
    depends on NAND_ENABLE
    help
        MAC address data in NAND.
    help_cht
        將 MAC address 儲存在 NAND。
    help_chs
        将 MAC address 储存在 NAND。

config NET_ETHERNET_MAC_ADDR_NOR
    bool "MAC address data in NOR"
    depends on NOR_ENABLE
    help
        MAC address data in NOR.
    help_cht
        將 MAC address 儲存在 NOR。
    help_chs
        将 MAC address 储存在 NOR。

config NET_ETHERNET_MAC_ADDR_SD0
    bool "MAC address data in SD0"
    depends on SD0_ENABLE
    help
        MAC address data in SD0.
    help_cht
        將 MAC address 儲存在 SD0。
    help_chs
        将 MAC address 储存在 SD0。

config NET_ETHERNET_MAC_ADDR_SD1
    bool "MAC address data in SD1"
    depends on SD1_ENABLE
    help
        MAC address data in SD1.
    help_cht
        將 MAC address 儲存在 SD1。
    help_chs
        将 MAC address 储存在 SD1。

endchoice

config NET_ETHERNET_MAC_ADDR_POS
    string "Position of MAC address data"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default "0x200000" if NET_ETHERNET_MAC_ADDR_NAND
    default "0xF0000"
    help
        Position of MAC address data in internal storage.
        It must located on the reserved area, and usually located on the place where between bootloader and rom image.

    help_cht
        內部儲存裝置位置。必須放在未格式化區域，通常是放在 Bootloader 與 ROM 之間的區域。
        (若存放於NAND，則必須是NAND BLOCK SIZE的倍數)
    help_chs
        内部储存装置位置。必须放在未格式化区域，通常是放在 Bootloader 与 ROM 之间的区域。
        (若存放在NAND，則必须是NAND BLOCK SIZE的倍数)

config NET_ETHERNET_MAC_ADDR_UPGRADE
    bool "Upgrade MAC address to storage if not exist"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default n
    help
        Upgrade MAC address to storage if not exist.
    help_cht
        如果 MAC address 尚未儲存過，將 Mac address 儲存起來。
    help_chs
        如果 MAC address 尚未储存过，将 Mac address 储存起来。

config NET_ETHERNET_MAC_ADDR_VERIFY_CODE
    string "MAC address verify number"
    depends on NET_ETHERNET_MAC_ADDR_STORAGE
    default "IT"
    help
        MAC address verify number. Must be 2 characters.
    help_cht
        MAC address 檢查碼. 必須是2個字元。
    help_chs
        MAC address 检查码. 必须是2个字元。

config NET_ETHERNET_DHCP
    bool "Enable Ethernet DHCP"
    depends on NET_ETHERNET
    default n
    help
        Enable Ethernet DHCP or not on Ethernet as default.
    help_cht
        開啟 DHCP 功能。
    help_chs
        开启 DHCP 功能。

#config NET_ETHERNET_DHCP_BY_DNS
#    bool "Enable Ethernet DHCP By DNS"
#    depends on NET_ETHERNET
#    default n
#    help
#        Enable get IP from DHCP by DNS.
#    help_cht
#        透過DNS解析DHCP伺服器，平常不用開啟。
#    help_chs
#        透过DNS解析DHCP服务器，平常不用开启。

config NET_ETHERNET_DETECT_IP
    bool "Enable Detect IP"
    depends on NET_ETHERNET
    default n
    help
        Enable Ethernet Detect IP is Duplication or Not.
    help_cht
        開啟偵測 IP 衝突功能。
    help_chs
        开启侦测 IP 冲突功能。

choice
    prompt "IP Reallocation type"
    depends on NET_ETHERNET_DETECT_IP
    default NET_ETHERNET_DETECT_IP_JUMP if DEF_NET_ETHERNET_DETECT_IP_JUMP
    default NET_ETHERNET_DETECT_IP_DHCP if DEF_NET_ETHERNET_DETECT_IP_DHCP
    default NET_ETHERNET_DETECT_IP_JUMP
    help
        The method of IP reallocation
    help_cht
        IP衝突時，重新分配IP的方式。
    help_chs
        IP冲突时，重新分配IP的方式。

config NET_ETHERNET_DETECT_IP_JUMP
    bool "IP Jump to Next"
    depends on NET_ETHERNET_DETECT_IP
    help
        Reallocte IP by jump to next one.
    help_cht
        將IP跳往下一個。
    help_chs
        将IP跳往下一个。

config NET_ETHERNET_DETECT_IP_DHCP
    bool "IP Jump by DHCP"
    depends on NET_ETHERNET_DETECT_IP
    help
        Reallocte IP by DHCP.
    help_cht
        由DHCP決定IP，需要接在有DHCP功能的設備。
    help_chs
        由DHCP决定IP，需要接在有DHCP功能的设备。
endchoice

config NET_ETHERNET_AUTOIP
    bool "Enable Ethernet AUTOIP"
    depends on NET_ETHERNET
    default n
    help
        Enable Ethernet AUTOIP or not on Ethernet as default.
    help_cht
        開啟 AUTO-IP 功能。
    help_chs
        开启 AUTO-IP 功能。

config NET_ETHERNET_IPADDR
    string "Ethernet default IP address"
    depends on (NET_ETHERNET && !NET_ETHERNET_DHCP && !NET_ETHERNET_AUTOIP && !NET_ETHERNET_MULTI_INTERFACE_DHCP)
    default "192.168.1.1"
    help
        Ethernet default IP address.
    help_cht
        IP address 預設值。
    help_chs
        IP address 默认值。

config NET_ETHERNET_NETMASK
    string "Ethernet default netmask"
    depends on (NET_ETHERNET && !NET_ETHERNET_DHCP && !NET_ETHERNET_AUTOIP && !NET_ETHERNET_MULTI_INTERFACE_DHCP)
    default "255.255.255.0"
    help
        Ethernet default netmask.
    help_cht
        Netmask 預設值。
    help_chs
        Netmask 默认值。

config NET_ETHERNET_GATEWAY
    string "Ethernet default gateway"
    depends on (NET_ETHERNET && !NET_ETHERNET_DHCP && !NET_ETHERNET_AUTOIP && !NET_ETHERNET_MULTI_INTERFACE_DHCP)
    default "192.168.1.254"
    help
        Ethernet default gateway.
    help_cht
        Gateway 預設值。
    help_chs
        Gateway 默认值。

config NET_ETHERNET_COUNT
    string "Ethernet count"
    depends on NET_ETHERNET
    default "1"
    help
        The number of Ethernet.
    help_cht
        網路卡數量。
        如要使用路由功能，請把數量改為2，並開啟Ethernet Route。
    help_chs
        网络卡数量。
        如要使用路由功能，请把数量改为2，并开启Ethernet Route。

if NET_ETHERNET_COUNT = "2" && NET_ETHERNET
config NET_ETHERNET_MULTI_INTERFACE
    bool "Enable Ethernet Route"
    depends on NET_ETHERNET
    default n
    help
        Enable Ethernet simple route.
    help_cht
        開啟乙太網路簡單路由功能。
    help_chs
        开启乙太网络簡單路由功能。

config NET_ETHERNET_MULTI_INTERFACE_DHCP
    bool "Enable Ethernet Multi-Interface DHCP"
    depends on (NET_ETHERNET && NET_ETHERNET_MULTI_INTERFACE)
    default n
    help
        Enable Ethernet DHCP of Multi-Interface or not on Ethernet as default.
    help_cht
        開啟多網路介面的 DHCP 功能(目前只有給介面0使用)。
    help_chs
        开启多网络接口的 DHCP 功能(目前只有给接口0使用)。
endif
#######################################################################

#######################################################################
config NET_ETHERNET_4G
    bool "Enable Ethernet 4G module"
    depends on NET_ENABLE && (USB0_ENABLE || USB1_ENABLE)
    default n
    help
        Enable 4G module or not.
    help_cht
        開啟4G模組功能。
    help_chs
        开启4G模块功能。

config USB_ECM
    bool "USB CDC Ethernet Support"
    depends on NET_ETHERNET_4G
    default y
    help
        USB CDC Ethernet Class Driver
    help_cht
        啟用 USB CDC-ECM 驅動。
    help_chs
        启用 USB CDC-ECM 驱动。

choice
    prompt "External device type"
    default NET_N720_4G if DEF_NET_N720_4G
    default NET_L718_4G if DEF_NET_L718_4G
    default NET_AIR720SL_4G if DEF_NET_AIR720SL_4G
    default NET_N720_4G
    depends on (NET_ETHERNET_4G && USB_ECM)
    help
        External device type.
    help_cht
        外接裝置型號。
    help_chs
        外接装置型号。

config NET_N720_4G
    bool "Enable N720 4G module"
    depends on NET_ETHERNET_4G
    help
        Enable N720 4G module. Need use ECM & OPTION usb class drivers.
    help_cht
        啟用 N720 4G 模組。需要搭配使用ECM及OPTION usb驅動。
    help_chs
        启用 N720 4G 模块。需要搭配使用ECM及OPTION usb驱动。

config NET_L718_4G
    bool "Enable L718 4G module"
    depends on NET_ETHERNET_4G
    help
        Enable L718 4G module. Need ECM (& OPTION) usb class driver.
    help_cht
        啟用 L718 4G 模組。需要搭配使用ECM(及OPTION) usb驅動。
    help_chs
        启用 L718 4G 模块。需要搭配使用ECM(及OPTION) usb驱动。

config NET_AIR720SL_4G
    bool "Enable AIR720SL 4G module"
    depends on NET_ETHERNET_4G
    help
        Enable Air720SL 4G module. Need use ECM usb class driver.
    help_cht
        啟用 Air720SL 4G 模組。需要搭配使用ECM usb驅動。
    help_chs
        启用 Air720SL 4G 模块。需要搭配使用ECM usb驱动。
endchoice

config NET_L718_4G_DELAY
    string "Delay time to enumerlate L718(ms)"
    depends on (USB_ECM && NET_L718_4G)
    default 5000
    help
        Delay time to enumerlate L718 (unit: ms).
    help_cht
        延遲進入裝置列舉的時間 (單位: ms)。
    help_chs
        延迟进入装置枚举的时间 (单位: ms)。

choice
    prompt "Select USB module for L718 4G"
    depends on  (USB_ECM && NET_L718_4G)
    default L718_4G_USB0 if DEF_L718_4G_USB0
    default L718_4G_USB1 if DEF_L718_4G_USB1
    default L718_4G_USB0

config L718_4G_USB0
    bool "use USB0 module"
    depends on (NET_L718_4G && USB0_ENABLE)
    help
        use USB0 module
    help_cht
        使用 USB0 的主控端控制器。
    help_chs
        使用 USB0 的主控端控制器。

config L718_4G_USB1
    bool "use USB1 module"
    depends on (NET_L718_4G && USB1_ENABLE)
    help
        use USB1 module
    help_cht
        使用 USB1 的主控端控制器。
    help_chs
        使用 USB1 的主控端控制器。

endchoice
#######################################################################

config NET_ETHERNET_POLL_INTERVAL
    string "Ethernet poll interval (ms)"
    depends on (NET_ENABLE && (NET_ETHERNET || NET_ETHERNET_4G || USBD_NCM))
    default "50"
    help
        Ethernet poll interval (ms), 0 to disable poll.
    help_cht
        探查網路狀態間隔 (單位: ms)， 0 表示不探查。
    help_chs
        探查网络状态间隔 (单位: ms)， 0 表示不探查。

#######################################################################
config NET_WIFI
    bool "Enable WiFi module"
    depends on (NET_ENABLE && (USB0_ENABLE || USB1_ENABLE || SD0_ENABLE || SD1_ENABLE))
    default n
    help
        Enable WiFi module.
    help_cht
        啟用 WiFi 模組。
    help_chs
        启用 WiFi 模块。

config NET_WIFI_MGR
    bool
    depends on NET_WIFI
    default y
    help
        Enable Wifi mgr
    help_cht
        啟用 Wifi mgr
    help_chs
        启用 Wifi mgr


config NET_WIFI_POLL_INTERVAL
    string "WiFi poll interval (ms)"
    depends on NET_WIFI
    default "50"
    help
        WiFi poll interval (ms), 0 to disable poll.
    help_cht
        探查 WiFi 狀態間隔 (單位: ms)， 0 表示不探查。
    help_chs
        探查 WiFi 状态间隔 (单位: ms)， 0 表示不探查。

choice
	prompt "Wifi device"
	default NET_WIFI_8188EUS if DEF_NET_WIFI_8188EUS
	default NET_WIFI_SDIO_NGPL if DEF_NET_WIFI_SDIO_NGPL
    default NET_WIFI_SDIO_SSV if DEF_NET_WIFI_SDIO_SSV
	default NET_WIFI_8188EUS
	depends on NET_WIFI
    help
        Choose Wifi device.
    help_cht
        選擇Wifi裝置。
    help_chs
        选择Wifi装置。

config NET_WIFI_8188EUS
    bool "Use WiFi 8188EUS"
    depends on NET_WIFI
    help
        Enable WiFi 8188EUS module.
    help_cht
        啟用 WiFi 模組8188EUS。
        適用模組: TP-LINK(TL-WN725N)
    help_chs
        启用 WiFi 模块8188EUS。
        适用模块: TP-LINK(TL-WN725N)

config NET_WIFI_SDIO_NGPL
    bool "Use WiFi SDIO Non-GPL"
    depends on (NET_WIFI && SDIO_ENABLE)
    help
        Enable SDIO WiFi module.
    help_cht
        啟用Non-GPL SDIO WiFi。
		HMI: 11, 20, 15, 19, 17, 18, -1, -1, -1, -1
		Indoor: 11, 20, 6, 19, 8, 9, -1, -1, -1, -1
    help_chs
        启用Non-GPL SDIO WiFi。
		HMI: 11, 20, 15, 19, 17, 18, -1, -1, -1, -1
		Indoor: 11, 20, 6, 19, 8, 9, -1, -1, -1, -1

config NET_WIFI_SDIO_SSV
    bool "Use WiFi SDIO ICOMM SSV6X5X"
    depends on (NET_WIFI && SDIO_ENABLE)
    help
        Enable ICOMM SSV6X5X SDIO WiFi module.
    help_cht
        啟用ICOMM SSV6X5X SDIO WiFi。
		Module GPIO(SD_1):
    help_chs
        启用ICOMM SSV6X5X WiFi。
		Module GPIO(SD_1):
endchoice

config NET_WIFI_WPA
    bool "Enable WiFi WPA"
    depends on (NET_WIFI && !(NET_WIFI_SDIO_NGPL || NET_WIFI_SDIO_SSV))
    default y
    help
        Enable WiFi WPA
    help_cht
        啟用 WiFi WPA 功能。
    help_chs
        启用 WiFi WPA 功能。

config NET_WIFI_MAY_NOT_EXIST
    bool "Enable WiFi may not exist"
    depends on NET_WIFI
    default n
    help
        Enable WiFi may not exist
    help_cht
        可能沒有 WiFi Dongle。
    help_chs
        可能没有 WiFi Dongle。。

config NET_WIFI_HOSTAPD
    bool "Enable WiFi softAP"
    depends on (NET_WIFI)
    default n
    help
        Enable WiFi softAP
    help_cht
        啟用 WiFi softAP 功能，將裝置模擬成無線AP。
    help_chs
        启用 WiFi softAP 功能，将装置模拟成无线AP。

config NET_WIFI_IPADDR
    string "SoftAP default IP address"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "192.168.0.1"
    help
        SoftAP default IP address
    help_cht
        SoftAP 預設的 IP 位址。
    help_chs
        SoftAP 默认的 IP 地址。

config NET_WIFI_NETMASK
    string "SoftAP default netmask"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "255.255.255.0"
    help
        SoftAP default netmask
    help_cht
        SoftAP 預設的 netmask 設定。
    help_chs
        SoftAP 默认的 netmask 设定。

config NET_WIFI_GATEWAY
    string "SoftAP default gateway"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "192.168.0.1"
    help
        SoftAP default gateway
    help_cht
        SoftAP 預設的 gateway 設定。
    help_chs
        SoftAP 默认的 gateway 设定。

config NET_WIFI_CHANNEL
    string "SoftAP default channel"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "10"
    help
        SoftAP default channel
    help_cht
        SoftAP預設頻道。
    help_chs
        SoftAP预设通道。

config NET_WIFI_SSID
    string "SoftAP default ssid"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "iteAP"

config NET_WIFI_HIDDENSSID
    string "SoftAP ignore broadcast ssid"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "0"
    help
        Hidden SoftAP SSID(No hidden:0, Hidden:1, Else: 2)
    help_cht
        隱藏SoftAP模式的SSID(No hidden:0, Hidden:1, Else: 2)。
    help_chs
        隐藏SoftAP模式的SSID(No hidden:0, Hidden:1, Else: 2)。

config NET_WIFI_80211N
    string "SoftAP enable 802.11n"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default "0"
    help
        0:disable 802.11n , 1: enable 802.11n
    help_cht
        0:disable 802.11n , 1: enable 802.11n
    help_chs
        0:disable 802.11n , 1: enable 802.11n

config NET_WIFI_WPA_ENABLE
    bool "Enable WiFi HOSTAPD WPA"
    depends on(NET_WIFI && NET_WIFI_HOSTAPD)
    default n

config NET_WIFI_PW
    string "SoftAP default password"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD && NET_WIFI_WPA_ENABLE)
    default "12345678"


config NET_WIFI_FIND_BEST_CHANNEL
    bool "Enable WiFi Find best channel"
    depends on (NET_WIFI && NET_WIFI_HOSTAPD)
    default n

config NET_WIFI_TRANS_LED
    bool "Enable WiFi transmit LED"
    depends on NET_WIFI
    default n
    help
        Enable WiFi transmit LED
    help_cht
        開啟使用 WiFi 傳輸狀態 LED。
    help_chs
        开启使用 WiFi 传输状态 LED。

config NET_WIFI_TRANS_LED_NUM
    string "WiFi transmit LED number"
    depends on (NET_WIFI && NET_WIFI_TRANS_LED)
    default "0"
    help
        WiFi transmit LED number
    help_cht
        WiFi 傳輸狀態 LED 個數。
    help_chs
        WiFi 传输状态 LED 个数。

