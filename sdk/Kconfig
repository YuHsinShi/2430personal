    prompt "UART3 mode"
    depends on UART3_ENABLE
	config UART3_INTR
		bool "UART3 Interrupt Enable"
		help
			Enable UART3 interrupt or not.
		help_cht
			開啟 UART3 中斷模式功能。
		help_chs
			开启 UART3 中断模式功能。
	config UART3_DMA
		bool "UART3 DMA Enable"
		help
			Enable UART3 DMA or not.
		help_cht
			開啟 UART3 DMA模式功能。
		help_chs
			开启 UART3 DMA模式功能。
	config UART3_FIFO
		bool "UART3 FIFO Enable"
		help
			Enable UART3 FIFO or not.
		help_cht
			開啟 UART3 FIFO模式功能。
		help_chs
			开启 UART3 FIFO模式功能。
endchoice

config UART3_BAUDRATE
    string "UART3 Baud Rate"
    depends on UART3_ENABLE
    default "115200"
    help
        UART3 Baud Rate.
    help_cht
        UART3 的傳輸速率。
    help_chs
        UART3 的传输速率。

config UART3_RS485
    bool "RS485_3 interface enbale"
    depends on UART3_ENABLE
    default n
    help
        Use RS485 as communication interface.
    help_cht
        以RS485作為通訊界面。
    help_chs
        以RS485作为通讯界面。

config UART4_ENABLE
    bool "UART4 Enable"
	depends on UART_ENABLE
    default n
    help
        Enable UART4 or not.
    help_cht
        啟用 UART4 功能。
    help_chs
        启用 UART4 功能。

choice
    prompt "UART4 mode"
    depends on UART4_ENABLE
	config UART4_INTR
		bool "UART4 Interrupt Enable"
		help
			Enable UART4 interrupt or not.
		help_cht
			開啟 UART4 中斷模式功能。
		help_chs
			开启 UART4 中断模式功能。
	config UART4_DMA
		bool "UART4 DMA Enable"
		help
			Enable UART4 DMA or not.
		help_cht
			開啟 UART4 DMA模式功能。
		help_chs
			开启 UART4 DMA模式功能。
	config UART4_FIFO
		bool "UART4 FIFO Enable"
		help
			Enable UART4 FIFO or not.
		help_cht
			開啟 UART4 FIFO模式功能。
		help_chs
			开启 UART4 FIFO模式功能。
endchoice

config UART4_BAUDRATE
    string "UART4 Baud Rate"
    depends on UART4_ENABLE
    default "115200"
    help
        UART3 Baud Rate.
    help_cht
        UART4 的傳輸速率。
    help_chs
        UART4 的传输速率。

config UART4_RS485
    bool "RS485_4 interface enbale"
    depends on UART4_ENABLE
    default n
    help
        Use RS485 as communication interface.
    help_cht
        以RS485作為通訊界面。
    help_chs
        以RS485作为通讯界面。

config UART5_ENABLE
    bool "UART5 Enable"
	depends on UART_ENABLE
    default n
    help
        Enable UART5 or not.
    help_cht
        啟用 UART5 功能。
    help_chs
        启用 UART5 功能。

