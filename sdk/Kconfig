    prompt "UART5 mode"
    depends on UART5_ENABLE
	config UART5_INTR
		bool "UART5 Interrupt Enable"
		help
			Enable UART5 interrupt or not.
		help_cht
			開啟 UART5 中斷模式功能。
		help_chs
			开启 UART5 中断模式功能。
	config UART5_DMA
		bool "UART5 DMA Enable"
		help
			Enable UART5 DMA or not.
		help_cht
			開啟 UART5 DMA模式功能。
		help_chs
			开启 UART5 DMA模式功能。
	config UART5_FIFO
		bool "UART5 FIFO Enable"
		help
			Enable UART5 FIFO or not.
		help_cht
			開啟 UART5 FIFO模式功能。
		help_chs
			开启 UART5 FIFO模式功能。
endchoice

config UART5_BAUDRATE
    string "UART5 Baud Rate"
    depends on UART5_ENABLE
    default "115200"
    help
        UART5 Baud Rate.
    help_cht
        UART5 的傳輸速率。
    help_chs
        UART5 的传输速率。

config UART5_RS485
    bool "RS485_5 interface enbale"
    depends on UART5_ENABLE
    default n
    help
        Use RS485 as communication interface.
    help_cht
        以RS485作為通訊界面。
    help_chs
        以RS485作为通讯界面。

config UART_FORCE_FLUSH
    bool "UART Force Flush"
    default n
    help
        Enable force flush UART write buffer or not.
    help_cht
        開啟強制清空 UART緩衝功能。
    help_chs
        开启强制清空 UART缓冲功能。

config SWUART_CODEC_ENABLE
    bool "SWUART Codec Enable"
    default n
    help
        Enable Software UART or not.
    help_cht
        啟用 Software UART。
    help_chs
        启用 Software UART。

config SWUART_CODEC_BAUDRATE
    string "Software UART Baud Rate"
    depends on SWUART_CODEC_ENABLE
    default "19200"
    help
        Software UART Baud Rate, Max Baud Rate 19200, recommend Baud Rate 19200 14400 9600.
    help_cht
        軟體 Software UART 串列傳輸速率, 最高傳輸速率 19200,建議串列傳輸速率 19200 14400 9600。
    help_chs
        软件 Software UART 波特率, 最高传输速率 19200, 建议波特率 19200 14400 9600。

config USBHCC
    bool "USBHCC Enable"
    default n
    help
        Enable HCC USB stack. Need disable USB0_ENABLE and USB1_ENABLE.
    help_cht
        啟用HCC USB堆棧。需要禁用 USB0_ENABLE 和 USB1_ENABLE。
    help_chs
        启用HCC USB堆栈。需要禁用 USB0_ENABLE 和 USB1_ENABLE。

config USBHCC_HOST
    bool "USB HOST Class"
    depends on USBHCC
    default y
    
config USBH_CD_MST
		bool "USBH Mass Storage"
    depends on USBHCC_HOST
    default n
		help
			USB Mass Storage Class Driver.
		help_cht
			啟用 USB 大量儲存裝置模式。
		help_chs
			启用 USB 大量储存装置模式。
    
config USBH_CD_HUB
		bool "USBH Hub"
    depends on USBHCC_HOST
    default n
		help
			USB Hub Class Driver.
		help_cht
			啟用 USB 集線器類驅動程序。
		help_chs
			启用 USB 集线器类驱动程序。

config USB0_ENABLE
    bool "USB0 Enable"
    default n
    help
        Enable USB0 or not. Need disable USBHCC.
    help_cht
        啟用 USB0 功能。需要禁用 USBHCC。
    help_chs
        启用 USB0 功能。需要禁用 USBHCC。

config USB1_ENABLE
    bool "USB1 Enable"
    default n
    help
        Enable USB1 or not. Need disable USBHCC.
    help_cht
        啟用 USB1 功能。需要禁用 USBHCC。
    help_chs
        启用 USB1 功能。需要禁用 USBHCC。

config USB_DEVICE
    bool "USB Device Mode"
    default n
    depends on (USB0_ENABLE || USB1_ENABLE)
    help
        USB Device Mode, Going to 'file system->Visible drive in USB device mode' to set up visibale drive in USB device mode.
    help_cht
        啟用 USB 設備端功能, 設定USB DEVICE MODE 可見磁區請至 file system->Visible drive in USB device mode設定。
    help_chs
        启用 USB 设备端功能, 设定USB DEVICE MODE 可见扇区请至 file system->Visible drive in USB device mode设定。

source "$CMAKE_SOURCE_DIR/sdk/driver/usb/gadget/Kconfig"

config IRDA_ENABLE
    bool "IrDA Enable"
    default n
    help
        Enable IrDA driver or not.
    help_cht
        啟用 IrDA 資料傳輸模組。
    help_chs
        启用 IrDA 数据传输模块。

config IR0_ENABLE
    bool "IR0 Enable"
	depends on IRDA_ENABLE
    default n
    help
        Enable IR0 driver or not.
    help_cht
        啟用 IR0 紅外線遙控模組。
    help_chs
        启用 IR0 红外线遥控模块。

choice
    prompt "IR0 mode"
    depends on IR0_ENABLE
	config IR0_INTR
		bool "IR0 Interrupt Enable"
		help
			Enable IR0 interrupt or not.
		help_cht
			開啟 IR0 中斷模式功能。
		help_chs
			开启 IR0 中断模式功能。
	config IR0_DMA
		bool "IR0 DMA Enable"
		help
			Enable IR0 DMA or not.
		help_cht
			開啟 IR0 DMA模式功能。
		help_chs
			开启 IR0 DMA模式功能。
	config IR0_FIFO
		bool "IR0 FIFO Enable"
		help
			Enable IR0 FIFO or not.
		help_cht
			開啟 IR0 FIFO模式功能。
		help_chs
			开启 IR0 FIFO模式功能。
endchoice

config IR0_RX_MOD
    bool "IR0 RX Modulation Enable"
	depends on IR0_ENABLE
    default n
    help
        Enable Rx modulation for IR0 or not.(Using Timing: IR module output waveform along with carrier frequency)
    help_cht
        啟用IR0接收端調變功能。(使用時機: IR模組輸出波型有載波)
    help_chs
        启用IR0接收端调变功能。（使用时机：IR模组输出波型有载波）

config IR0_RX_SAMPLE
    bool "IR0 RX sample Enable"
	depends on IR0_ENABLE
    default n
    help
        Enable Rx sample function for IR0 or not.
    help_cht
        啟用IR0接收端取樣功能。
    help_chs
        启用IR0接收端取样功能。

config IR0_TX_MOD
    bool "IR0 TX Modulation Enable"
	depends on IR0_ENABLE
    default n
    help
        Enable Tx modulation for IR0 or not.
    help_cht
        啟用IR0發送端調變功能。
    help_chs
        启用IR0发送端调变功能。

config IR0_REPEAT
    bool "IR0 Repeat Key Enable"
	depends on IR0_ENABLE
    default n
    help
        Enable repeat key for IR0 or not.
    help_cht
        啟用IR0重複鍵功能。
    help_chs
        启用IR0重复键功能。

config IR0_RX_PROTOCOL
    file "IR0 protocol | ../../sdk/target/ir | *.inc"
	depends on IR0_ENABLE
    default "ir_nec.inc"
    help
        IR0 Rx protocol, it puts in 'sdk\target\ir' directory.
    help_cht
        IR0 Rx的通訊定義碼，放在 'sdk\target\ir' 目錄。
    help_chs
        IR0 Rx的通讯定义码，放在 'sdk\target\ir' 目录。

config IR0_RX_MAPPING_TABLE
    file "IR0 mapping table | ../../sdk/target/ir | *.inc"
	depends on IR0_ENABLE
    default "ir_ite_flash.inc"
    help
        IR0 Rx code mapping table, it puts in 'sdk\target\ir' directory.
    help_cht
        IR0 Rx的訊號對應表，放在 'sdk\target\ir' 目錄。
    help_chs
        IR0 Rx的讯号对应表，放在 'sdk\target\ir' 目录。

config IR0_PRESS_INTERVAL
    string "IR0 Keypad Press Key Interval (ms)"
	depends on IR0_ENABLE
    default "1100"
    help
        IR0 key press interval (ms).
    help_cht
        IR0 鍵的時間間隔（單位：ms）
    help_chs
        IR0 键的时间间隔（单位：ms）

config IR0_VENDOR_CODE
    string "IR0 vendor code"
	depends on IR0_ENABLE
    default "0xFC03"
    help
        IR0 vendor code.
    help_cht
        IR0 的廠商識別碼。
    help_chs
        IR0 的厂商标识符。

