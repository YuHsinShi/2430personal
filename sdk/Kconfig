config CAPTURE_SENSOR
    file "SENSOR | ../../sdk/driver/sensor | *.c"
    depends on SENSOR_ENABLE
    default "NT99141.c"
    help
        Sensor driver. It puts in sdk\driver\sensor\*.c
        If you want to add new module, you can modify sensor\userdefine.c.
    help_cht
        Sensor 的模組驅動原始碼，放在 'sdk\driver\sensor\*.c'。
        新增新的模組可以修改'sensor\userdefine.c'
    help_chs
        Sensor 的模块驱动源码，放在 'sdk\driver\sensor\*.c'。
        新增新的模块可以修改'sensor\userdefine.c'

    choice
        prompt "Flick"
        depends on SENSOR_ENABLE
        default SENSOR_FLICK_50HZ if DEF_SENSOR_FLICK_50HZ
        default SENSOR_FLICK_60HZ if DEF_SENSOR_FLICK_60HZ
        default SENSOR_FLICK_50HZ
        help
            Choose Encode Sensor Flick Rate.
        help_cht
            選用攝影機頻率
        help_chs
            选用摄影机頻率

        config SENSOR_FLICK_60HZ
            bool "60Hz"
            help
                Sensor 60Hz.
            help_cht
                使用 60Hz
            help_chs
                使用 60Hz

        config SENSOR_FLICK_50HZ
            bool "50Hz"
            help
                Sensor 50Hz.
            help_cht
                使用 50Hz
            help_chs
                使用 50Hz
    endchoice

    choice
        prompt "IIC_PORT_SEL"
        depends on SENSOR_ENABLE
        default SENSOR_IIC0 if DEF_SENSOR_IIC0
        default SENSOR_IIC1 if DEF_SENSOR_IIC1
        default SENSOR_IIC2 if DEF_SENSOR_IIC2
        default SENSOR_IIC3 if DEF_SENSOR_IIC3
