    string "RS485_5 TX Pin"
    depends on (UART5_ENABLE && UART5_RS485)
    default "14"
    help
        The GPIO pin number for RS485_5 TX.
    help_cht
        RS485_5 TX 的 GPIO 號碼。
    help_chs
        RS485_5 TX 的 GPIO 接口。

config GPIO_RS485_5_TX_ENABLE
    string "RS485_5 TX Enable Pin"
    depends on (UART5_ENABLE && UART5_RS485)
    default "8"
    help
        The GPIO pin number for RS485_5 TX Enable.
    help_cht
        RS485_5 TX Enable 的 GPIO 號碼。
    help_cht
        RS485_5 TX Enable 的 GPIO 接口。

