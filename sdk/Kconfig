config AUDIO_MGR_RESAMPLE
    bool "Audio mgr resample"
    default n
    depends on BUILD_AUDIO_MGR
    help
        audio mgr support resample
    help_cht
        audio mgr 支援 resample
    help_chs
        audio mgr 支持 resample

config AUDIO_MGR_PARSING_MP3
    bool "Audio mgr parsing mp3"
    default n
    depends on BUILD_AUDIO_MGR
    help
        audio mgr support parsing mp3
    help_cht
        audio mgr 支援 parsing mp3
    help_chs
        audio mgr 支持 parsing mp3
endmenu #end BUILD_AUDIO_MGR

menu "Audio Mgr Buffer Size Setting"
    depends on BUILD_AUDIO_MGR

config AUDIO_MGR_THREAD_STACK_SIZE
    string "Audio mgr thread stack size"
    default "64"
    depends on BUILD_AUDIO_MGR
    help
        audio mgr thread stack size(N*1024)
    help_cht
        audio mgr 線程堆疊大小(N*1024)
    help_chs
        audio mgr 線程堆疊大小(N*1024)

config AUDIO_MGR_READ_BUFFER_SIZE
    string "Audio mgr read buffer size"
    default "64"
    depends on BUILD_AUDIO_MGR
    help
        audio mgr read buffer size (N*1024)
    help_cht
        audio mgr 讀取緩衝空間大小 (N*1024)
    help_chs
        audio mgr 讀取緩衝空間大小 (N*1024)

config AUDIO_SPECIAL_CASE_BUFFER_SIZE
    string "Audio special case buffer size"
    default "64"
    depends on BUILD_AUDIO_MGR
    help
        rapidly play wav soud,file size less then value can rapidly play sound ex:keysound (N*1024)
        Audio special case buffer size (N*1024) for short sound play(ex:key sound need rapid reaction)
    help_cht
        快速撥放音檔(wav),音檔小於設定值能快速撥放ex:按鍵音 (N*1024)
    help_chs
        快速撥放音檔(wav),音檔小於設定值能快速撥放ex:按鍵音 (N*1024)

endmenu #end buffer size setting

