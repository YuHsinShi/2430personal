config UART_ENABLE
    bool "UART Enable"
    default y
    help
        Enable UART driver or not.
    help_cht
        啟用 UART 功能。
    help_chs
        启用 UART 功能。

config UART0_ENABLE
    bool "UART0 Enable"
	depends on UART_ENABLE
    default y
    help
        Enable UART0 or not.
    help_cht
        啟用 UART0 功能。
    help_chs
        启用 UART0 功能。

choice
    prompt "UART0 mode"
    depends on UART0_ENABLE
	config UART0_INTR
		bool "UART0 Interrupt Enable"
		help
			Enable UART0 interrupt or not.
		help_cht
			開啟 UART0 中斷模式功能。
		help_chs
			开启 UART0 中断模式功能。
	config UART0_DMA
		bool "UART0 DMA Enable"
		help
			Enable UART0 DMA or not.
		help_cht
			開啟 UART0 DMA模式功能。
		help_chs
			开启 UART0 DMA模式功能。
	config UART0_FIFO
		bool "UART0 FIFO Enable"
		help
			Enable UART0 FIFO or not.
		help_cht
			開啟 UART0 FIFO模式功能。
		help_chs
			开启 UART0 FIFO模式功能。
endchoice

config UART0_BAUDRATE
    string "UART0 Baud Rate"
    depends on UART0_ENABLE
    default "115200"
    help
        UART0 Baud Rate.
    help_cht
        UART0 的傳輸速率。
    help_chs
        UART0 的传输速率。

config UART0_RS485
    bool "RS485_0 interface enbale"
    depends on UART0_ENABLE
    default n
    help
        Use RS485 as communication interface.
    help_cht
        以RS485作為通訊界面。
    help_chs
        以RS485作为通讯界面。

config UART1_ENABLE
    bool "UART1 Enable"
	depends on UART_ENABLE
    default n
    help
        Enable UART1 or not.
    help_cht
        啟用 UART1 功能。
    help_chs
        启用 UART1 功能。

choice
    prompt "UART1 mode"
    depends on UART1_ENABLE
	config UART1_INTR
		bool "UART1 Interrupt Enable"
		help
			Enable UART1 interrupt or not.
		help_cht
			開啟 UART1 中斷模式功能。
		help_chs
			开启 UART1 中断模式功能。
	config UART1_DMA
		bool "UART1 DMA Enable"
		help
			Enable UART1 DMA or not.
		help_cht
			開啟 UART1 DMA模式功能。
		help_chs
			开启 UART1 DMA模式功能。
	config UART1_FIFO
		bool "UART1 FIFO Enable"
		help
			Enable UART1 FIFO or not.
		help_cht
			開啟 UART1 FIFO模式功能。
		help_chs
			开启 UART1 FIFO模式功能。
endchoice

