menu "Speech Coding Codec"
    depends on DIALOGUE_PARAMETER_SET

config AUDIO_CODEC_G711_ALAW
    bool
    prompt "G.711 A-Law Codec"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Only select one from g.711 a-law and g.711 u-law.
        If select multiple, the priority is g.711 u-law > g.711 a-law.
    help_cht
        啟用 g.711 a-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 與 g.711 u-law 擇一
    help_chs
        启用 g.711 a-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 与 g.711 u-law 择一

config AUDIO_CODEC_G711_ULAW
    bool
    prompt "G.711 u-Law Codec"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Only select one from OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law and g.711 u-law.
    help_cht
        啟用 g.711 u-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 與 g.711 u-law 擇一
    help_chs
        启用 g.711 u-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 与 g.711 u-law 择一

config AUDIO_CODEC_G722
    bool
    prompt "G.722 Codec"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Only select one from OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law and g.711 u-law.
    help_cht
        啟用 g.722 codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 與 g.711 u-law 擇一
    help_chs
        启用 g.722 codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 与 g.711 u-law 择一

config AUDIO_CODEC_G726_ALAW
    bool
    prompt "G.726 A-Law Codec"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Only select one from OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law and g.711 u-law.
    help_cht
        啟用 g.726 a-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 與 g.711 u-law 擇一
    help_chs
        启用 g.726 a-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 与 g.711 u-law 择一

config AUDIO_CODEC_G726_ULAW
    bool
    prompt "G.726 u-Law Codec"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Only select one from OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law and g.711 u-law.
    help_cht
        啟用 g.726 u-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 與 g.711 u-law 擇一
    help_chs
        启用 g.726 u-law codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 与 g.711 u-law 择一

config AUDIO_CODEC_G729
    bool
    prompt "G.729 Codec"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Only select one from OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law and g.711 u-law.
    help_cht
        啟用 g.729 codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 與 g.711 u-law 擇一
    help_chs
        启用 g.729 codec。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 与 g.711 u-law 择一

config AUDIO_CODEC_OPUS
    bool
    prompt "OPUS Codec"
    depends on AUDIO_ENABLE && DIALOGUE_PARAMETER_SET
    default n
    help
        Only select one from OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law and g.711 u-law.
    help_cht
        啟用 OPUS。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 與 g.711 u-law 擇一
    help_chs
        启用 OPUS。OPUS, g.722, g.726 a-law, g.726 u-law, g.729, g.711 a-law 与 g.711 u-law 择一

config OPUS_DTX_ENABLE
    bool "OPUS DTX Enable"
    default n
    depends on AUDIO_CODEC_OPUS
    help
        Enable OPUS DTX function
    help_cht
        啟用OPUS DTX 功能
    help_chs
        启用OPUS DTX 功能

config OPUS_FEC_ENABLE
    bool "OPUS FEC Enable"
    default n
    depends on AUDIO_CODEC_OPUS
    help
        Enable OPUS FEC function
    help_cht
        啟用OPUS FEC 功能
    help_chs
        启用OPUS FEC 功能

config BUILD_OPUS
    def_bool y if AUDIO_CODEC_OPUS

config BUILD_BCG729
    def_bool y if AUDIO_CODEC_G729

config BUILD_SPANDSP726
    def_bool y if (AUDIO_CODEC_G726_ALAW || AUDIO_CODEC_G726_ULAW)

endmenu

