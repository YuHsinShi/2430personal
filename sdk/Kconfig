    prompt "UART2 mode"
    depends on UART2_ENABLE
	config UART2_INTR
		bool "UART2 Interrupt Enable"
		help
			Enable UART2 interrupt or not.
		help_cht
			開啟 UART2 中斷模式功能。
		help_chs
			开启 UART2 中断模式功能。
	config UART2_DMA
		bool "UART2 DMA Enable"
		help
