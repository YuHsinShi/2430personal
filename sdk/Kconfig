config NET_URENDER
    bool "Enable uRender"
    depends on NET_UPNP
    default n

config NET_URENDER_CONFIG
    string "uRender configuration file"
    depends on NET_URENDER
    default "urender"
    help
        In sdk\target\upnp\

config NET_URENDER_SYSTEMNAME
    string "uRender system name"
    depends on NET_URENDER
    default "AudioLink"

config NET_URENDER_PORT
    string "uRender port"
    depends on NET_URENDER
    default "50000"

config NET_URENDER_FRIENDLYNAME
    string "uRender friendly name"
    depends on NET_URENDER
    default "AudioLink"

config NET_URENDER_MENUFACTURER
    string "uRender manufacturer"
    depends on NET_URENDER
    default "ITE Tech. BU5"

config NET_URENDER_MENUFACTURERURL
    string "uRender manufacturer URL"
    depends on NET_URENDER
    default "http://www.ite.com.tw/"

config NET_URENDER_MODELDESCRIPTION
    string "uRender model description"
    depends on NET_URENDER
    default "UPnP Media Renderer"

config NET_URENDER_MODELNAME
    string "uRender model name"
    depends on NET_URENDER
    default "ITE UPnP Renderer"

config NET_URENDER_MODELNUMBER
    string "uRender model number"
    depends on NET_URENDER
    default "001"

config NET_URENDER_MODELURL
    string "uRender model URL"
    depends on NET_URENDER
    default "http://www.ite.com.tw/"

config NET_URENDER_SERIALNUMBER
    string "uRender serial number"
    depends on NET_URENDER
    default "ITE-BU5-01"

config NET_URENDER_WEBSERVER_HOMEPAGE
    string "uRender webserver homepage"
    depends on NET_URENDER
    default "info.html"

config NET_URENDER_CONFIG_INI_FILE
    string "uRender config ini filename"
    depends on NET_URENDER
    default "audiolink.ini"

config NET_DNS_SD
    bool "Enable DNS Service Discovery"
    depends on NET_ENABLE
    default n

choice
    prompt "DNS Service Discovery Type"
    depends on NET_DNS_SD
    default DNS_SD_RESPONDER if DEF_DNS_SD_RESPONDER
    default DNS_SD_DAEMON if DEF_DNS_SD_DAEMON

config DNS_SD_RESPONDER
    bool "mDNSResponder"

config DNS_SD_DAEMON
    bool "PosixDaemon"

endchoice

config NET_SHAIRPORT
    bool "Enable Shairport"
    depends on NET_DNS_SD
    default n

config NET_SHAIRPORT_DACP
    bool "Enable Shairport DACP"
    depends on NET_DNS_SD
    default n

config BLOCK_UDP
	bool "Enable UDP Packets Release"
	depends on NET_ENABLE
	default n
	help
		Block UDP port
	help_cht
		在傳輸層釋放外部UDP封包的buff。

		在某些情況需要開啟，例如lobby與手機進行SIP影像通話。
	help_chs
		在传输层释放外部UDP数据包的buff。

		在某些情况需要开启，例如lobby与手机进行SIP视频通话。

config SIP_PROXD_TEST
	bool "Enable SIP proxd test"
	depends on NET_ENABLE
	default n
	help
		Test SIP proxd or not
	help_cht
		開啟測試SIP PROXD功能
		siproxd_registration.txt也要更改。
	help_chs
		开启测试SIP PROXD功能
		siproxd_registration.txt也要更改。

#config BLOCK_UDP_PORT
#    string "UDP port"
#    depends on BLOCK_UDP
#    default "9078,9079"
#    help
#        UDP port.
#    help_cht
#        UDP埠號，設定多個埠號請用","隔開。
#    help_chs
#        UDP埠号，设定多个埠号请用","隔开。

config SIP_SERVER_TEST
	bool "Enable SIP Test"
	depends on NET_ENABLE
	default y if (DEF_SIP_INDOOR_TEST || DEF_SIP_LOBBY_TEST || DEF_SIP_OUTDOOR_TEST)
	default n
	help
		Test SIP server or not
		Press "#9" and "管理中心" can callout to cellphone for Indoor and Lobby, respectively.
	help_cht
		開啟測試SIP SERVER功能
		Indoor按"#9"、Lobby按"管理中心"
		可打到外部裝置。
	help_chs
		开启测试SIP SERVER功能
		Indoor按"#9"、Lobby按"管理中心"
		可打到外部装置。

choice
    prompt "Test device"
	default SIP_INDOOR_TEST if DEF_SIP_INDOOR_TEST
    default SIP_LOBBY_TEST if DEF_SIP_LOBBY_TEST
	default SIP_OUTDOOR_TEST if DEF_SIP_OUTDOOR_TEST
    default SIP_INDOOR_TEST
    depends on SIP_SERVER_TEST
    help
        Choose what device you want to test SIP.
    help_cht
        選擇想要測試SIP功能的裝置。
    help_chs
        选择想要测试SIP功能的装置。

config SIP_INDOOR_TEST
    bool "SIP indoor test"
    depends on SIP_SERVER_TEST
    help
        Test SIP by using indoor.
    help_cht
        使用indoor來測試SIP功能。
		除了"#9"可以打到指定的裝置，也可以直接
		輸入對方帳號或IP。

		EX: "#032"、"#192.168.190.61"
    help_chs
        使用indoor来测试SIP功能。
		除了"#9"可以打到指定的装置，也可以直接
		输入对方帐号或IP。

		EX: "#032"、"@192.168.190.61"

config SIP_LOBBY_TEST
    bool "SIP lobby test"
    depends on SIP_SERVER_TEST
    help
        Test SIP by using lobby.
    help_cht
        使用lobby來測試SIP功能。
    help_chs
        使用lobby来测试SIP功能。

config SIP_OUTDOOR_TEST
    bool "SIP outdoor test"
    depends on SIP_SERVER_TEST
    help
        Test SIP by using outdoor.
    help_cht
        使用outdoor來測試SIP功能。
    help_chs
        使用outdoor来测试SIP功能。

endchoice

config REGISTER_ACCOUNT
    string "Register account"
    depends on SIP_SERVER_TEST
    default "031"
    help
        Register SIP account.
    help_cht
        SIP註冊帳號。
    help_chs
        SIP注册帐号。

config REGISTER_DOMAIN
    string "Register domain"
    depends on SIP_SERVER_TEST
    default "10.2.1.199"
    help
        Register SIP domain.
    help_cht
        SIP註冊網域。
    help_chs
        SIP注册网段。

config REGISTER_PWD
    string "Register password"
    depends on SIP_SERVER_TEST
    default "asdf1234"
    help
        Register SIP password.
    help_cht
        SIP註冊密碼。
    help_chs
        SIP注册密码。

config SIP_CALLOUT
    string "SIP callout"
    depends on SIP_SERVER_TEST
    default "032"
    help
        SIP callout by account name.
    help_cht
        SIP要撥打的對象帳號(與註冊帳號同網域)
    help_chs
        SIP要拨打的对象帐号(与注册帐号同网段)

config REGISTER_ACCOUNT_2
    string "Register account 2"
    depends on SIP_SERVER_TEST
    default "032"
    help
        Register SIP account 2.
    help_cht
        第二個SIP註冊帳號，雙註冊用。
    help_chs
        第二个SIP注册帐号，双注册用。

config REGISTER_DOMAIN_2
    string "Register domain 2"
    depends on SIP_SERVER_TEST
    default "10.2.1.199"
    help
        Register SIP domain 2.
    help_cht
        第二個SIP註冊網域，雙註冊用。
    help_chs
        第二个SIP注册网段，双注册用。

config REGISTER_PWD_2
    string "Register password 2"
    depends on SIP_SERVER_TEST
    default "asdf1234"
    help
        Register SIP password 2.
    help_cht
        第二個SIP註冊密碼，雙註冊用。
    help_chs
        第二个SIP注册密码，双注册用。

config P2P
	bool "Enable P2P"
	depends on NET_ENABLE
	default n
	help
		Enable P2P or not
 help_cht
		開啟P2P功能
		可打到外部裝置。
	help_chs
		开启P2P功能
		可打到外部装置。

config P2P_CALLOUT
    string "P2P callout"
    depends on P2P
    default "010110010101"
    help
        P2P callout by ring group name.
    help_cht
        P2P要撥打的對象帳號
    help_chs
        P2P要拨打的对象帐号

config P2P_DOMAIN
    string "P2P domain"
    depends on P2P
    default "192.168.190.20"
    help
        P2P callout to ICM.
    help_cht
        P2P要撥打的對象
    help_chs
        P2P要拨打的对象
endif
endmenu


menu "Task"
    hidden if DEV_DEVELOP

config TASK_DRIVE_PROBE
    bool "Enable Drive Probe Task"
    depends on (SD0_ENABLE || SD1_ENABLE || USB0_ENABLE || USBH_CD_MST || RAMDISK_ENABLE)
    default n
    help
        Create a task to probe insert/remove cards and mount/unmount file system automatically.
    help_cht
        建立自動探查卡插拔和掛入磁碟機的程序。
    help_chs
        建立自动探查卡插拔和挂入磁盘驱动器的程序。

config TASK_HDMI_PROBE
    bool "Enable HDMI Probe Task"
    depends on TVOUT_HDMI
    default n
    help
        If the TVOUT_HDMI is defined (i.e., HDMI is enabled),
        it has to polling the HDMI's API "HDMITX_DevLoopProc()" periodically.
        So it creates a TASK to handle this job.
    help_cht
        啟用 HDMI 探查程序
    help_chs
        启用 HDMI 探查程序

config TASK_HDMI_PROBE_PERIOD
    string "The polling period of checking HDMI(ms)"
    depends on TASK_HDMI_PROBE
    default "1000"
    help
        Default value: 1000 (ms)
    help_cht
        HDMI 探查時間間隔 (單位: ms）
    help_chs
        HDMI 探查时间间隔 (单位: ms）

endmenu


menu "Debug"
    hidden if DEV_DEVELOP

choice
    prompt "Debug Message Device"
    default DBG_NONE if DEF_DBG_NONE
    default DBG_PRINTBUF if DEF_DBG_PRINTBUF
    default DBG_SWUART_CODEC if DEF_DBG_SWUART_CODEC
	default DBG_UART5 if UART5_ENABLE
    default DBG_UART4 if UART4_ENABLE
    default DBG_UART3 if UART3_ENABLE
	default DBG_UART2 if UART2_ENABLE
	default DBG_UART1 if UART1_ENABLE
    default DBG_UART0 if UART0_ENABLE
    default DBG_LCDCONSOLE if DEF_DBG_LCDCONSOLE
    default DBG_OSDCONSOLE if DEF_DBG_OSDCONSOLE
    default DBG_PRINTBUF
    help
        Debug message
    help_cht
        除錯訊息
    help_chs
        侦错讯息

config DBG_NONE
    bool "None"
    help
        Do not output debug message.
    help_cht
        不輸出除錯訊息。
    help_chs
        不输出侦错讯息。

config DBG_PRINTBUF
    bool "Print buffer"
    help
        Output message via print buffer.
    help_cht
        輸出除錯訊息到記憶體。
    help_chs
        输出侦错讯息到内存。

config DBG_SWUART_CODEC
    bool "Software UART"
    help
        Output message via Software codec by second CPU.
    help_cht
        輸出除錯訊息到軟體 UART （經由次 CPU 產生，不佔主 CPU 時間）。
    help_chs
        输出侦错讯息到软件 UART （经由次 CPU 产生，不占主 CPU 时间）。

config DBG_UART0
    bool "UART0"
    depends on UART0_ENABLE
    help
        Output message via UART0.
    help_cht
        輸出除錯訊息到 UART0。
    help_chs
        输出侦错讯息到 UART0。

config DBG_UART1
    bool "UART1"
    depends on UART1_ENABLE
    help
        Output message via UART1.
    help_cht
        輸出除錯訊息到 UART1。
    help_chs
        输出侦错讯息到 UART1。

config DBG_UART2
    bool "UART2"
    depends on UART2_ENABLE
    help
        Output message via UART2.
    help_cht
        輸出除錯訊息到 UART2。
    help_chs
        输出侦错讯息到 UART2。

config DBG_UART3
    bool "UART3"
    depends on UART3_ENABLE
    help
        Output message via UART3.
    help_cht
        輸出除錯訊息到 UART3。
    help_chs
        输出侦错讯息到 UART3。

config DBG_UART4
    bool "UART4"
    depends on UART4_ENABLE
    help
        Output message via UART4.
    help_cht
        輸出除錯訊息到 UART4。
    help_chs
        输出侦错讯息到 UART4。

config DBG_UART5
    bool "UART5"
    depends on UART5_ENABLE
    help
        Output message via UART5.
    help_cht
        輸出除錯訊息到 UART5。
    help_chs
        输出侦错讯息到 UART5。

config DBG_LCDCONSOLE
    bool "LCD console"
    depends on LCD_ENABLE && !LCD_MULTIPLE
    help
        Output message to LCD console.
    help_cht
        輸出除錯訊息到 LCD 上。
    help_chs
        输出侦错讯息到 LCD 上。

config DBG_OSDCONSOLE
    bool "OSD console"
    depends on LCD_ENABLE && !LCD_MULTIPLE
    help
        Output message to OSD console.
    help_cht
        輸出除錯訊息到 OSD 上。
    help_chs
        输出侦错讯息到 OSD 上。

endchoice

config SWUARTDBGPRINTF_BAUDRATE
    string "SWUARTDBGPRINTF Baud Rate"
    depends on DBG_SWUART_CODEC
    default "38400"
    help
        Software SWUARTDBGPRINTF Baud Rate
    help_cht
        軟體 SWUARTDBGPRINTF 串列傳輸速率。
    help_chs
        软件 SWUARTDBGPRINTF 波特率。

config DBG_NETCONSOLE
    bool "Network console"
    depends on (NET_ENABLE && DBG_PRINTBUF)
    default n
    help
        Network console
    help_cht
        輸出除錯訊息到網路。
    help_chs
        输出侦错讯息到网络。

config DBG_NETCONSOLE_PORT
    string "Network console port"
    depends on DBG_NETCONSOLE
    default "6666"
    help
        Network console port
    help_cht
        除錯訊息的網路埠號。
    help_chs
        侦错讯息的网络端口号。

config DBG_NETCLI
    bool "Network console with CLI"
    depends on (DBG_NETCONSOLE && OPENRTOS_CLI)
    default n
    help
        Network console with CLI function
    help_cht
        開啓網路命令列功能。
    help_chs
        开启网络命令行功能。

config DBG_NETCLI_PORT
    string "Network console CLI port"
    depends on DBG_NETCLI
    default "6667"
    help
        Network console CLI port
    help_cht
        網路命令列功能 Port。
    help_chs
        网络命令行功能 Port。

config DBG_INIT_SCRIPT
    file "Debug initial script | ../../sdk/target/debug | *.txt"
    default "IT9860_360Mhz_DDR2_360Mhz.txt"
    help
        In sdk\target\debug\
    help_cht
        使用 USB2SPI 除錯的初始化腳本檔，放在 sdk\target\debug 目錄下。
    help_chs
        使用 USB2SPI 侦错的初始化脚本文件，放在 sdk\target\debug 目录下。

config DBG_ICE_SCRIPT
    file "Debug ICE script | ../../sdk/target/debug | *.csf"
    default "IT9070A1_Initial_DDR2_Mem_tiling_pitch2048_320MHZ.csf"
    help
        In sdk\target\debug
    help_cht
        使用 ICE 除錯的初始化腳本檔，放在 sdk\target\debug 目錄下。
    help_chs
        使用 ICE 侦错的初始化脚本文件，放在 sdk\target\debug 目录下。

config DBG_PRINTBUF_SIZE
    string "Print Buffer Size"
    depends on DBG_PRINTBUF
    default "0x10000"
    help
        The memory size to store print message.

        4k:     0x1000
        8k:     0x2000
        64k:    0x10000
    help_cht
        記憶體除錯訊息的空間大小。

        4k:     0x1000
        8k:     0x2000
        64k:    0x10000
    help_chs
        内存侦错讯息的空间大小。

        4k:     0x1000
        8k:     0x2000
        64k:    0x10000

config DBG_BLUESCREEN
    bool "Blue Screen"
    depends on LCD_ENABLE
    default n
    help
        Shows blue Screen when system hang.
    help_cht
        當機時顯示藍屏錯誤訊息。
    help_chs
        当机时显示蓝屏错误讯息。

config DBG_RMALLOC
    bool "Enable Malloc Debug Library"
    depends on !CPU_WB
    default n
    help
        Enable Malloc Debug Library.
    help_cht
        開啟記憶體配置診斷功能。(\sdk\driver\itp\itp_rmalloc.c) 在Out of memory後會把目前malloc的位置與size印出來，重複malloc的地方會合併成一列。另外有檢查malloc的memory boundary是否被覆寫的功能。開啓後會影響效能。必須關閉System/Internal Settings/CPU write-back (CPU_WB)才能使用
    help_chs
        开启记忆体配置诊断功能。(\sdk\driver\itp\itp_rmalloc.c) 在Out of memory后会把目前malloc的位置与size印出来，重复malloc的地方会合并成一列。另外有检查malloc的memory boundary是否被覆写的功能。开启后会影响效能。必须关闭System/Internal Settings/CPU write-back (CPU_WB)才能使用

config DBG_STATS
    bool "Enable Runtime Statistic"
    default n
    help
        Enable Runtime Statistic.
    help_cht
        開啟即時統計功能。
    help_chs
        开启实时统计功能。

config DBG_STATS_PERIOD
    string "Runtime Statistic Period"
    depends on DBG_STATS
    default "10"
    help
        Runtime Statistic Period (sec)
    help_cht
        輸出統計結果週期。 (單位為秒)
    help_chs
        输出统计结果周期。 (单位为秒)

config DBG_STATS_HEAP
    bool "Enable Runtime Heap Statistic"
    depends on DBG_STATS
    default n
    help
        Enable Runtime Heap Statistic
    help_cht
        開啟統計記憶體配置功能。開啓後會在Runtime Statistic Period指定的時間週期印出記憶體使用情況。若同時開啓Debug memory leak或Enable Malloc Debug Library則會週期地加印出目前每個malloc的位置與size。
    help_chs
        开启统计记忆体配置功能。开启后会在Runtime Statistic Period指定的时间周期印出记忆体使用情况。若同时开启Debug memory leak或Enable Malloc Debug Library则会周期地加印出目前每个malloc的位置与size。

config DBG_STATS_TASK_LIST
    bool "Enable Runtime Task List Statistic"
    depends on (DBG_STATS && OPENRTOS_USE_TRACE_FACILITY)
    default n
    help
        Enable Runtime Task List Statistic
    help_cht
        開啟統計程序清單功能。
    help_chs
        开启统计程序列表功能。

config DBG_STATS_TASK_TIME
    bool "Enable Runtime Task Time Statistic"
    depends on (DBG_STATS && OPENRTOS_USE_TRACE_FACILITY && OPENRTOS_GENERATE_RUN_TIME_STATS)
    default n
    help
        Enable Runtime Task Time Statistic
    help_cht
        開啟統計程序執行時間功能。
    help_chs
        开启统计程序运行时间功能。

config DBG_STATS_MEM_BANDWIDTH
    bool "Enable Runtime Memory Bandwidth Statistic"
    depends on DBG_STATS
    default n
    help
        Enable Runtime Memory Bandwidth Statistic
    help_cht
        開啟統計記憶體頻寬功能。
    help_chs
        开启统计内存带宽功能。

config DBG_STATS_GPIO
    bool "Enable Runtime GPIO Status Statistic"
    depends on DBG_STATS
    default n
    help
        Enable Runtime GPIO Status Statistic

        Mode :
        0 : mode0
        1 : mode1
        2 : mode2
        3 : mode3
        …

        Io :
        0 : input
        1 : output

        Val :
        0 : low
        1 : high
    help_cht
        開啟統計GPIO狀態功能。

        Mode :
        0 : mode0
        1 : mode1
        2 : mode2
        3 : mode3
        …

        Io :
        0 : input
        1 : output

        Val :
        0 : low
        1 : high
    help_chs
        开启统计GPIO状态功能。

        Mode :
        0 : mode0
        1 : mode1
        2 : mode2
        3 : mode3
        …

        Io :
        0 : input
        1 : output

        Val :
        0 : low
        1 : high

config DBG_STATS_GPIO_START_PIN
    string "GPIO Start Pin"
    depends on DBG_STATS_GPIO
    default "-1"
    help
        GPIO Start Pin.
    help_cht
        GPIO 開始號碼。
    help_cht
        GPIO 开始接口。

config DBG_STATS_GPIO_END_PIN
    string "GPIO End Pin"
    depends on DBG_STATS_GPIO
    default "-1"
    help
        GPIO End Pin.
    help_cht
        GPIO 結束號碼。
    help_cht
        GPIO 结束接口。

config DBG_STATS_TCPIP
    bool "Enable Runtime TCP/IP Statistic"
    depends on (DBG_STATS && NET_ENABLE)
    default n
    help
        Enable Runtime TCP/IP Statistic
    help_cht
        開啟統計 TCP/IP 封包功能。
    help_chs
        开启统计 TCP/IP 封包功能。

config DBG_STATS_FAT
    bool "Enable Runtime FAT Statistic"
    depends on (DBG_STATS && FS_FAT)
    default n
    help
        Enable Runtime FAT Statistic
    help_cht
        開啟統計 FAT 速度功能。
    help_chs
        开启统计 FAT 速度功能。

config DBG_TRACE_ANALYZER
    bool "Enable Task Statistic Analyzer"
    depends on OPENRTOS_USE_TRACE_FACILITY
    default n
    help
        Enable task statistic analyzer
    help_cht
        開啟 Task 統計分析。
    help_chs
        开启 Task 统计分析。

choice DBG_TRACE_METHOD
    prompt "select trace method"
    depends on DBG_TRACE_ANALYZER
    default DBG_VCD
    help
        select trace method
    help_cht
        選擇分析方式。
    help_chs
        选择分析方式。

config DBG_VCD
    bool "Use Task Value Change Dump (VCD) File"
    help
        Use Task Value Change Dump (VCD) File to store the analysis result, and use GTKWave to open it.
    help_cht
        使用 Task Value Change Dump (VCD) 記錄分析結果，寫出的檔案可以用一般免費軟體例如 GTKWave 開啟。統計資料內容較少，好處軟體是免費的。
    help_chs
        使用 Task Value Change Dump (VCD) 记录分析结果，写出的档案可以用一般开源软件例如 GTKWave 开启。统计资料内容较少，好处软件是免费的。

#config DBG_TRACE
#    bool "Use Percepio AB's Trace Function"
#    help
#        Use the software provide by Percepio AB™ (http://percepio.com) to analyze trace result. You need to buy the sofware license from Percepio AB™.
#    help_cht
#        使用 Percepio AB™ (http://percepio.com) 提供的軟體分析，可以得到更多的分析結果，但分析軟體必須購買。
#    help_chs
#        使用 Percepio AB™ (http://percepio.com) 提供的软件分析，可以得到更多的分析结果，但分析软件必须购买。

endchoice

config ENABLE_UART_CLI
    bool "UART Command Line Interface"
    default n
    help
        UART Command Line Interface.
    help_cht
        開啟命令列功能, 使用UART Protocol。
    help_chs
        开启命令行功能, 使用UART Protocol。

config BOOT_TESTBIN_ENABLE
    bool "Boot Test Bin Enable"
    depends on BOOTLOADER_ENABLE
    default n
    help
        Boot Test Bin by USB device for test.
    help_cht
        由USB裝置載入測試程序開機進行調試。
    help_chs
        由USB装置载入测试程序开机进行调试。

config TESTBIN_FILENAME
    string "Test Bin filename"
    depends on BOOT_TESTBIN_ENABLE
    default "Test.bin"
    help
        Test Bin filename.
    help_cht
        測試檔檔案名稱。
    help_chs
        测试档文件名。

config DBG_OUTPUT_DEBUG_FILES
    bool "Output debug files"
    default n
    help
        Output debug files or not.
    help_cht
        輸出除錯相關檔案。
    help_chs
        输出除错相关档案。

endmenu


menu "Upgrade"

config UPGRADE_BOOTLOADER
    bool "Upgrade Bootloader"
    default n
    help
        Upgrade bootloader or not.
    help_cht
        開啟更新 bootloader 功能。
    help_chs
        开启更新 bootloader 功能。

choice
    prompt "Bootloader booting device"
    depends on UPGRADE_BOOTLOADER
    default UPGRADE_BOOTLOADER_NAND if DEF_UPGRADE_BOOTLOADER_NAND
    default UPGRADE_BOOTLOADER_NOR if DEF_UPGRADE_BOOTLOADER_NOR
    default UPGRADE_BOOTLOADER_SD0 if DEF_UPGRADE_BOOTLOADER_SD0
    default UPGRADE_BOOTLOADER_SD1 if DEF_UPGRADE_BOOTLOADER_SD1
    default UPGRADE_BOOTLOADER_NOR
    help
        Bootloader booting device.
    help_cht
        Bootloader 開機來源。
    help_chs
        Bootloader 开机来源。

config UPGRADE_BOOTLOADER_NAND
    bool "Bootloader booting from NAND"
    help
        Bootloader booting from NAND
    help_cht
        Bootloader 從 NAND 開機。
    help_chs
        Bootloader 从 NAND 开机。

config UPGRADE_BOOTLOADER_NOR
    bool "Bootloader booting from NOR"
    help
        Bootloader booting from NOR
    help_cht
        Bootloader 從 NOR 開機。
    help_chs
        Bootloader 从 NOR 开机。

config UPGRADE_BOOTLOADER_SD0
    bool "Bootloader booting from SD0"
    help
        Bootloader booting from SD0
    help_cht
        Bootloader 從 SD0 開機。
    help_chs
        Bootloader 从 SD0 开机。

config UPGRADE_BOOTLOADER_SD1
    bool "Bootloader booting from SD1"
    help
        Bootloader booting from SD1
    help_cht
        Bootloader 從 SD1 開機。
    help_chs
        Bootloader 从 SD1 开机。

endchoice

config UPGRADE_BOOTLOADER_EXTERNAL_PROJECT
    bool "Bootloader is in external project"
    depends on UPGRADE_BOOTLOADER
    default n
    help
        Bootloader is in external project.
    help_cht
        從外部專案的 bootloader 來更新。
    help_chs
        从外部项目的 bootloader 来更新。

config UPGRADE_IMAGE
    bool "Upgrade Image"
    default n
    help
        Upgrade image or not.
    help_cht
        更新 ROM 映像檔。
    help_chs
        更新 ROM 映像文件。

choice
    prompt "Image booting device"
    depends on UPGRADE_IMAGE
    default UPGRADE_IMAGE_NAND if DEF_UPGRADE_IMAGE_NAND
    default UPGRADE_IMAGE_NOR if DEF_UPGRADE_IMAGE_NOR
    default UPGRADE_IMAGE_SD0 if DEF_UPGRADE_IMAGE_SD0
    default UPGRADE_IMAGE_SD1 if DEF_UPGRADE_IMAGE_SD1
    default UPGRADE_IMAGE_NOR
    help
        Image booting device.
    help_cht
        ROM 映像檔開機的裝置
    help_chs
        ROM 映像文件开机的装置

config UPGRADE_IMAGE_NAND
    bool "Image booting from NAND"
    help
        Image booting from NAND
    help_cht
        ROM 映像檔從 NAND 開機。
    help_chs
        ROM 映像文件从 NAND 开机。

config UPGRADE_IMAGE_NOR
    bool "Image booting from NOR"
    help
        Image booting from NOR
    help_cht
        ROM 映像檔從 NOR 開機。
    help_chs
        ROM 映像文件从 NOR 开机。

config UPGRADE_IMAGE_SD0
    bool "Image booting from SD0"
    help
        Image booting from SD0
    help_cht
        ROM 映像檔從 SD0 開機。
    help_chs
        ROM 映像文件从 SD0 开机。

config UPGRADE_IMAGE_SD1
    bool "Image booting from SD1"
    help
        Image booting from SD1
    help_cht
        ROM 映像檔從 SD1 開機。
    help_chs
        ROM 映像文件从 SD1 开机。

endchoice

config UPGRADE_IMAGE_POS
    string "Image position"
    depends on UPGRADE_IMAGE
    default "0x300000" if UPGRADE_IMAGE_NAND
    default "0x100000"
    help
        The position of ROM image in the internal storage. It should located on the reserved area.
        The area (position + ROM image size) cannot overlap with bootloader, mac address and partitions.
        The ROM image file is at build\openrtos\<project>\project\<target-project>\kproc.sys

        512k: 0x80000
        1M: 0x100000
    help_cht
        內部儲存裝置位置。必須放在未格式化區域，並且必須是Block Size(NOR:64kB, NAND:256kB)的倍數。
        本區域(位置 + ROM 映像檔大小)不能與 Bootloader 、 MAC address 與磁碟分割區重疊。
        ROM 映像檔放在 build\openrtos\<project>\project\<target-project>\kproc.sys

        512k: 0x80000
        1M: 0x100000
    help_chs
        内部储存装置位置。必须放在未格式化区域，并且必须是Block Size(NOR:64kB, NAND:256kB)的倍数。
        本区域(位置 + ROM 映像文件大小)不能与 Bootloader 、 MAC address 与磁盘分区区重迭。
        ROM 映像档放在 build\openrtos\<project>\project\<target-project>\kproc.sys

        512k: 0x80000
        1M: 0x100000

config UPGRADE_DATA
    bool "Upgrade Data"
    default n
    help
        Upgrade data or not.
    help_cht
        開啟更新磁碟分割區資料功能。
    help_chs
        开启更新磁盘分区数据功能。

config UPGRADE_PRIVATE
    bool "Upgrade Private Data"
    depends on UPGRADE_DATA
    default y
    help
        Upgrade private data or not
    help_cht
        開啟更新私有分割區資料功能。
    help_chs
        开启更新私有分割区数据功能。

choice
    prompt "Private data location"
    depends on UPGRADE_PRIVATE
    default UPGRADE_PRIVATE_NAND if DEF_UPGRADE_PRIVATE_NAND
    default UPGRADE_PRIVATE_NOR if DEF_UPGRADE_PRIVATE_NOR
    default UPGRADE_PRIVATE_SD0 if DEF_UPGRADE_PRIVATE_SD0
    default UPGRADE_PRIVATE_SD1 if DEF_UPGRADE_PRIVATE_SD1
    default UPGRADE_PRIVATE_NOR
    help
        Private data location.
    help_cht
        私有分割區的位置。
    help_chs
        私有分割区的位置。

config UPGRADE_PRIVATE_NAND
    bool "Private data in NAND"
    help
        Private data in NAND
    help_cht
        私有分割區放在 NAND。
    help_chs
        私有分割区放在 NAND。

config UPGRADE_PRIVATE_NOR
    bool "Private data in NOR"
    help
        Private data in NOR
    help_cht
        私有分割區放在 NOR。
    help_chs
        私有分割区放在 NOR。

config UPGRADE_PRIVATE_SD0
    bool "Private data in SD0"
    help
        Private data in SD0
    help_cht
        私有分割區放在 SD0。
    help_chs
        私有分割区放在 SD0。

config UPGRADE_PRIVATE_SD1
    bool "Private data in SD1"
    help
        Private data in SD1
    help_cht
        私有分割區放在 SD1。
    help_chs
        私有分割区放在 SD1。

endchoice

config UPGRADE_PUBLIC
    bool "Upgrade Public Data"
    depends on UPGRADE_DATA
    default n
    help
        Upgrade public data or not
    help_cht
        開啟更新公用分割區資料功能。
    help_chs
        开启更新公用分割区数据功能。

choice
    prompt "Public data location"
    depends on UPGRADE_PUBLIC
    default UPGRADE_PUBLIC_NAND if DEF_UPGRADE_PUBLIC_NAND
    default UPGRADE_PUBLIC_NOR if DEF_UPGRADE_PUBLIC_NOR
    default UPGRADE_PUBLIC_SD0 if DEF_UPGRADE_PUBLIC_SD0
    default UPGRADE_PUBLIC_SD1 if DEF_UPGRADE_PUBLIC_SD1
    default UPGRADE_PUBLIC_NOR
    help
        Public data location.
    help_cht
        公用分割區的位置。
    help_chs
        公用分割区的位置。

config UPGRADE_PUBLIC_NAND
    bool "Public data in NAND"
    help
        Public data in NAND
    help_cht
        公用分割區放在 NAND。
    help_chs
        公用分割区放在 NAND。

config UPGRADE_PUBLIC_NOR
    bool "Public data in NOR"
    help
        Public data in NOR
    help_cht
        公用分割區放在 NOR。
    help_chs
        公用分割区放在 NOR。

