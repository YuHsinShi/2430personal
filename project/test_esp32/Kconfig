#
# For a description of the syntax of this configuration file,
# see Documentation/kbuild/kconfig-language.txt.
#

mainmenu "Project Configuration"

config CMAKE_SOURCE_DIR
    string
    option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT9860
    def_bool y

config ROM_COMPRESS
    def_bool n

config DEF_DBG_UART0
    def_bool y

config UART0_ENABLE
    def_bool y

config GPIO_UART0_TX
    default "4"

config GPIO_UART0_RX
    default "-1"
	
#==== for SD ====
config SD1_ENABLE
    def_bool y

config SDIO_ENABLE
    def_bool y

config SDIO1_STATIC
    def_bool y

config GPIO_SD1_IO
      default "11, 13, 15, 16, 17, 18, -1, -1, -1, -1"
    
config UART1_ENABLE
    def_bool y

config ESP32_SDIO_AT
	def_bool y
	
config SDIO_4BIT_MODE
	def_bool n

#==== for SD ====

config DBG_INIT_SCRIPT
    default "IT9860_360Mhz_DDR2_360Mhz.txt"

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"




