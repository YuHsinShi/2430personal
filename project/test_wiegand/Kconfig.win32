#
# For a description of the syntax of this configuration file,
# see Documentation/kbuild/kconfig-language.txt.
#

mainmenu "Project Configuration"

config TEST_WIEGAND_DEFAULT
    bool
    default y
    select HAVE_TWO_WIEGAND

config CMAKE_SOURCE_DIR
	string
	option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT9860
    def_bool y  

config RAM_SIZE
    default "0x4000000"

config RAM_INIT_SCRIPT
    default "IT9860_360Mhz_DDR2_360Mhz.scr"

config GPIO_UART0_TX
    default "4"

config GPIO_UART0_RX
    default "-1"

config DBG_INIT_SCRIPT
    default "IT9860_360Mhz_DDR2_360Mhz.txt"
    
config WIEGAND_ENABLE
    def_bool y

config WIEGAND0_ENABLE
    def_bool y

config WIEGAND0_GPIO0
    default "24"

config WIEGAND0_GPIO1
    default "23"

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"

menu "Wiegand Test"

choice
	prompt "Test App"
	default TEST_READ_CARD
	
config TEST_READ_CARD
	bool "READ_CARD"
	
config TEST_WIEGAND_OUT_O2I
	bool "WIEGAND_OUT_O2I"
	
endchoice

choice
	prompt "Test Source"
	default TEST_FROM_WIEGAND0
	
config TEST_FROM_WIEGAND0
	bool "FROM_WIEGAND0"
	
config TEST_FROM_WIEGAND1
	bool "FROM_WIEGAND1"
	
endchoice
	
endmenu
