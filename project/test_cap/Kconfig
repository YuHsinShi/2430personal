#
# For a description of the syntax of this configuration file,
# see Documentation/kbuild/kconfig-language.txt.
#

mainmenu "Project Configuration"

config TEST_CAP
    bool
    default y
    select HAVE_LCD
    select HAVE_GRAPHICS
    select HAVE_VIDEO
    select HAVE_AUDIO

config CMAKE_SOURCE_DIR
    string
    option env="CMAKE_SOURCE_DIR"

config DEF_CHIP_PKG_IT9860
    def_bool y

config DEF_CPU_FA626
    def_bool y

config RAM_SIZE
    default "0x4000000"

config RAM_INIT_SCRIPT
    default "IT9860_264Mhz_DDR2_264Mhz.scr"

config LCD_ENABLE
    def_bool n

config BACKLIGHT_ENABLE
    def_bool n

config DBG_INIT_SCRIPT
    default "IT9860_264Mhz_DDR2_264Mhz.txt"

config I2C0_ENABLE
    def_bool y

config GPIO_IIC0_CLK
    default "37"

config GPIO_IIC0_DATA
    default "39"

config UART0_ENABLE
    def_bool n

config UART1_ENABLE
    def_bool y

config GPIO_UART1_TX
    default "4"

config GPIO_UART1_RX
    default "-1"

config CAPTURE_DEFINE
    default "DEMO_9860_DEFAULT.txt"

config SENSOR_ENABLE
    def_bool y

config VIDEO_ENABLE
    def_bool y

config STC_ENABLE
    def_bool y

config FS_FAT
    def_bool y

config ITU_UCL_ENABLE
    def_bool n

config BUILD_INIPARSER
    def_bool n

config BUILD_ITU
    def_bool n

config BUILD_SDL
    def_bool n

config TASK_DRIVE_PROBE
    def_bool n

config RECORD_VIDEO
    def_bool n

config AUDIO_DAC_MODULE
    default "itp_dac_ite970.c"

config AUDIO_CODEC_MP3DEC
    def_bool y

config AUDIO_CODEC_WAV
    def_bool y

config AUDIO_CODEC_WMADEC
    def_bool y

config COMPRESS_AUDIO_PLUGIN
    def_bool y

config BUILD_AUDIO_MGR
    def_bool y

source "$CMAKE_SOURCE_DIR/sdk/Kconfig"


menu "CAP TEST FUNCTION"

    choice
        prompt "Test CAP"
        default CAP_MODULE_MODE

    config CAP_MODULE_MODE
        bool "CAP_MODULE_MODE"
        help
            Peripheral->SENSOR_ENABLE = true
    endchoice

endmenu

